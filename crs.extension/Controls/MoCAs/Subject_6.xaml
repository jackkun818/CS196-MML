<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_6"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="Attention" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            Attention
        </TextBlock>
        <hc:SimplePanel Margin="0,30,0,0" DockPanel.Dock="Top">
            <WrapPanel VerticalAlignment="Center">
                <TextBlock FontSize="28" TextWrapping="Wrap">
                    Now please subtract 7 from 100, and then subtract 7 from the number obtained, and calculate five times in total. Continuous reduction: 4 or 5 correct scores 3 points, 2 or 3 correct scores 2 points,
                </TextBlock>
                <TextBlock FontSize="28" TextWrapping="Wrap">
                    1 point for correct one, 0 points for correct one
                </TextBlock>
                <ContentControl
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                    <ContentControl.Content>
                        <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                            Rating: The total score of this entry is 3 points. All mistakes are given 0 points, one is given 1 point correctly, two to three are given 2 points correctly, and four to five are given 3 points correctly. Calculate the correct subtraction from 100, and each subtraction is evaluated separately. That is to say, if the patient reduces the error once and the subsequent subtraction from this subtraction is correct, the subsequent correct subtraction must be given points. For example, if the patient's answer is 93-85-78-71-64, 85 are wrong, and the other results are correct, so give 3 points
                        </TextBlock>
                    </ContentControl.Content>
                </ContentControl>
                <Button
                    Width="51"
                    Height="36"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="ExecuteAudioPlayClick"
                    Cursor="Hand"
                    Tag="Now please subtract 7 from one hundred, and then subtract 7 from the obtained number, and calculate five times in total">

                    <Button.Content>
                        <Image
                            Width="28"
                            Height="24"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            Source="{StaticResource crs_sound}"
                            Stretch="Uniform" />
                    </Button.Content>
                </Button>
            </WrapPanel>
        </hc:SimplePanel>
        <DockPanel DataContext="{Binding ChildrenItems[0]}">
            <TextBlock
                Margin="0,0,0,150"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Bold">
                Reference answer:
            </TextBlock>
            <UniformGrid
                Columns="5"
                Rows="1"
                TextBlock.FontSize="36"
                TextBlock.FontWeight="Bold">
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[0]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <hc:TextBox
                        Width="180"
                        Height="50"
                        Margin="0,0,0,60"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        hc:InfoElement.ShowClearButton="True"
                        BorderBrush="Black"
                        DataContext="{Binding AnswerItems[0]}"
                        DockPanel.Dock="Bottom"
                        FontSize="20"
                        Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        93
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[1]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <hc:TextBox
                        Width="180"
                        Height="50"
                        Margin="0,0,0,60"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        hc:InfoElement.ShowClearButton="True"
                        BorderBrush="Black"
                        DataContext="{Binding AnswerItems[1]}"
                        DockPanel.Dock="Bottom"
                        FontSize="20"
                        Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        86
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[2]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <hc:TextBox
                        Width="180"
                        Height="50"
                        Margin="0,0,0,60"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        hc:InfoElement.ShowClearButton="True"
                        BorderBrush="Black"
                        DataContext="{Binding AnswerItems[2]}"
                        DockPanel.Dock="Bottom"
                        FontSize="20"
                        Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        79
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[3]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <hc:TextBox
                        Width="180"
                        Height="50"
                        Margin="0,0,0,60"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        hc:InfoElement.ShowClearButton="True"
                        BorderBrush="Black"
                        DataContext="{Binding AnswerItems[3]}"
                        DockPanel.Dock="Bottom"
                        FontSize="20"
                        Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        72
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[4]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <hc:TextBox
                        Width="180"
                        Height="50"
                        Margin="0,0,0,60"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        hc:InfoElement.ShowClearButton="True"
                        BorderBrush="Black"
                        DataContext="{Binding AnswerItems[4]}"
                        DockPanel.Dock="Bottom"
                        FontSize="20"
                        Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        65
                    </TextBlock>
                </DockPanel>
            </UniformGrid>
        </DockPanel>
    </DockPanel>

</UserControl>
