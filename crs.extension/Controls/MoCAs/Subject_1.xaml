<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="Visual space/Execute functions" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            Visual space/Execute functions
        </TextBlock>
        <UniformGrid
            Margin="0,30,0,0"
            Columns="3"
            Rows="1">
            <DockPanel HorizontalAlignment="Center" DataContext="{Binding ChildrenItems[0]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" FontSize="28">
                        1.Alternating line test
                    </TextBlock>
                    <ContentControl
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                        <ContentControl.Content>
                            <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                                score:<LineBreak /><LineBreak />
                                When the patient follows exactly”1-First-2-Second-3-C-4-Man-5-E“When connecting lines in order and there are no crossing lines, you will get 1 point. When the patient makes any mistakes without correcting himself immediately, 0 points are given.</TextBlock>
                        </ContentControl.Content>
                    </ContentControl>
                    <Button
                        Width="51"
                        Height="36"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ExecuteAudioPlayClick"
                        Cursor="Hand"
                        Tag="Please alternate numbers and text in order">

                        <Button.Content>
                            <Image
                                Width="28"
                                Height="24"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Source="{StaticResource crs_sound}"
                                Stretch="Uniform" />
                        </Button.Content>
                    </Button>
                </StackPanel>
                <Image
                    Width="260"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{StaticResource crs_Title Illustration 4}" />
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" DataContext="{Binding ChildrenItems[1]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" FontSize="28">
                        2.Copy cube
                    </TextBlock>
                    <ContentControl
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                        <ContentControl.Content>
                            <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                                Rating: If the following criteria are fully met, give 1 point,Anyone who violates one of them will be 0 points<LineBreak /><LineBreak />
                                1.The figure is a three-dimensional structure<LineBreak />
                                2.All lines exist<LineBreak />
                                3.No extra lines<LineBreak />
                                4.The opposite sides are basically parallel and the length is basically the same(Cuboids or prisms are also correct）</TextBlock>
                        </ContentControl.Content>
                    </ContentControl>
                    <Button
                        Width="51"
                        Height="36"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ExecuteAudioPlayClick"
                        Cursor="Hand"
                        Tag="Please imitate and draw cubes in the blank space according to the following figure">
                        <Button.Content>
                            <Image
                                Width="28"
                                Height="24"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Source="{StaticResource crs_sound}"
                                Stretch="Uniform" />
                        </Button.Content>
                    </Button>
                </StackPanel>
                <Image
                    Width="195"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{StaticResource crs_Title Illustration 5}" />
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" DataContext="{Binding ChildrenItems[2]}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Top"
                    Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" FontSize="28">
                        3.Drawing clock（11:10）
                    </TextBlock>
                    <ContentControl
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                        <ContentControl.Content>
                            <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                                Rating: If the following three criteria are met, 1 point will be given respectively,If one of these is violated, no points will be given to the item<LineBreak /><LineBreak />
                                contour(1 point): The surface must be a circle, allowing for minor defects(If the circle is not closed）<LineBreak />
                                number(1 point): All numbers must be complete and without extra numbers；The number order must be correct and within the quadrant to which it belongs；Can be Roman numerals；Numbers can be placed outside the circle<LineBreak />
                                pointer(1 point): There must be two pointers and point to the correct time together；The hour hand must be significantly shorter than the minute hand；The center intersection of the pointer must be inside the watch and close to the center of the clock.</TextBlock>
                        </ContentControl.Content>
                    </ContentControl>
                    <Button
                        Width="51"
                        Height="36"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ExecuteAudioPlayClick"
                        Cursor="Hand"
                        Tag="Please draw a clock in the blank space, fill in all the numbers and point out 11:10">
                        <Button.Content>
                            <Image
                                Width="28"
                                Height="24"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Source="{StaticResource crs_sound}"
                                Stretch="Uniform" />
                        </Button.Content>
                    </Button>
                </StackPanel>
                <UniformGrid
                    Height="220"
                    Margin="0,0,0,45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Columns="1"
                    Rows="3"
                    TextBlock.FontSize="28">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">contour</TextBlock>
                        <ContentControl
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding AnswerItems[0]}"
                            ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                            DockPanel.Dock="Bottom" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">number</TextBlock>
                        <ContentControl
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding AnswerItems[1]}"
                            ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                            DockPanel.Dock="Bottom" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">pointer</TextBlock>
                        <ContentControl
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding AnswerItems[2]}"
                            ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                            DockPanel.Dock="Bottom" />
                    </StackPanel>
                </UniformGrid>
            </DockPanel>
        </UniformGrid>
    </DockPanel>

</UserControl>
