<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_9"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="Abstract Ability" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            Abstract Ability
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">Please tell me their similarity. For example: banana——orange＝fruit</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        Rating: Only the answers to the last two groups of words are rated. If the answer is correct, each group of words will be given 1 point. Only the following answers are considered correct: Train and Bicycle: Transportation；For travel. Watches and rulers: Measuring instruments；For measurement. The following answers cannot be given points: Train and bicycle: Both wheels are available. Watches and rulers: both have numbers.
                    </TextBlock>
                </ContentControl.Content>
            </ContentControl>

        </StackPanel>
        <UniformGrid
            Columns="2"
            Rows="1"
            TextBlock.FontSize="36"
            TextBlock.FontWeight="Bold">
            <DockPanel DataContext="{Binding ChildrenItems[0]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <hc:TextBox
                    Width="180"
                    Height="50"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="Black"
                    DataContext="{Binding AnswerItems[0]}"
                    DockPanel.Dock="Bottom"
                    FontSize="20"
                    Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    train——bike
                    <Button
                        Width="51"
                        Height="36"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ExecuteAudioPlayClick"
                        Cursor="Hand"
                        Tag="Next I will tell you about the similarity between these two objects. What are the similarities between trains and bicycles">

                        <Button.Content>
                            <Image
                                Width="28"
                                Height="24"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Source="{StaticResource crs_sound}"
                                Stretch="Uniform" />
                        </Button.Content>
                    </Button>
                </TextBlock>

            </DockPanel>
            <DockPanel DataContext="{Binding ChildrenItems[1]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <hc:TextBox
                    Width="180"
                    Height="50"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="Black"
                    DataContext="{Binding AnswerItems[0]}"
                    DockPanel.Dock="Bottom"
                    FontSize="20"
                    Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    watch——ruler
                    <Button
                        Width="51"
                        Height="36"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ExecuteAudioPlayClick"
                        Cursor="Hand"
                        Tag="Next I will talk about two objects. Please tell me the similarity of these two objects. What are the similarities between watches and rulers">

                        <Button.Content>
                            <Image
                                Width="28"
                                Height="24"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Source="{StaticResource crs_sound}"
                                Stretch="Uniform" />
                        </Button.Content>
                    </Button>
                </TextBlock>
            </DockPanel>
        </UniformGrid>
    </DockPanel>

</UserControl>
