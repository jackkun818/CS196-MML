<UserControl x:Class="crs.extension.Controls.MoCAs.Subject_6_Sub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:controls="clr-namespace:crs.extension.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:crs.extension.Models"
             xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
             d:Background="White"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                              Type={x:Type models:SubjectItem}}"
             d:DesignHeight="975"
             d:DesignWidth="1720"
             mc:Ignorable="d">

    <DockPanel DataContext="{Binding ChildrenItems[0]}">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Bottom"
                   FontSize="28"
                   TextAlignment="Center"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="Wrap" />
        <TextBlock DockPanel.Dock="Top"
                   FontSize="45"
                   FontWeight="Bold"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="Wrap">
            Now please subtract 7 from 100, and then subtract 7 from the obtained number, and calculate five times in total
        </TextBlock>
        <hc:SimplePanel Margin="0,40">

            <hc:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="40">
                    （You can calculate in the blank space and write the answer in the white square）
                </TextBlock>
                <UniformGrid Margin="0,25,0,0"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Columns="5"
                             IsHitTestVisible="False"
                             Rows="1">
                    <Border Width="224"
                            Height="120"
                            Margin="22,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1" />
                    <Border Width="224"
                            Height="120"
                            Margin="22,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1" />
                    <Border Width="224"
                            Height="120"
                            Margin="22,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1" />
                    <Border Width="224"
                            Height="120"
                            Margin="22,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1" />
                    <Border Width="224"
                            Height="120"
                            Margin="22,0"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="1" />
                </UniformGrid>
            </hc:SimpleStackPanel>
            <controls:Crs_DrawPanel DrawStrokes="{Binding StrokeItem}" />
        </hc:SimplePanel>
    </DockPanel>
</UserControl>
