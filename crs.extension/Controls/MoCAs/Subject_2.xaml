<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="name" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            name
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">Please tell me the name of each animal</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        Rating: 1 point for each correct answer<LineBreak /><LineBreak />
                        1.lion<LineBreak />
                        2.rhino<LineBreak />
                        3.Camel or dromedary</TextBlock>
                </ContentControl.Content>
            </ContentControl>
            <Button
                Width="51"
                Height="36"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExecuteAudioPlayClick"
                Cursor="Hand"
                Tag="Please tell me the name of this animal">
                <Button.Content>
                    <Image
                        Width="28"
                        Height="24"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Source="{StaticResource crs_sound}"
                        Stretch="Uniform" />
                </Button.Content>
            </Button>
        </StackPanel>
        <UniformGrid Columns="3" Rows="1">
            <DockPanel HorizontalAlignment="Center" DataContext="{Binding ChildrenItems[0]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <hc:TextBox
                    Width="180"
                    Height="50"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="Black"
                    DataContext="{Binding AnswerItems[0]}"
                    DockPanel.Dock="Bottom"
                    FontSize="20"
                    Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
                <Image
                    Width="322"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{StaticResource crs_Title Illustration 3}" />
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" DataContext="{Binding ChildrenItems[1]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <hc:TextBox
                    Width="180"
                    Height="50"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="Black"
                    DataContext="{Binding AnswerItems[0]}"
                    DockPanel.Dock="Bottom"
                    FontSize="20"
                    Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
                <Image
                    Width="322"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{StaticResource crs_Title Illustration 1}" />
            </DockPanel>

            <DockPanel HorizontalAlignment="Center" DataContext="{Binding ChildrenItems[2]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <hc:TextBox
                    Width="180"
                    Height="50"
                    Margin="0,0,0,15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="Black"
                    DataContext="{Binding AnswerItems[0]}"
                    DockPanel.Dock="Bottom"
                    FontSize="20"
                    Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
                <Image
                    Width="322"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{StaticResource crs_Title Illustration 2}" />
            </DockPanel>
        </UniformGrid>
    </DockPanel>

</UserControl>
