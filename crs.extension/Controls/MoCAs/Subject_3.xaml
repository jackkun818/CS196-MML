<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="memory" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            memory
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">Read the list of nouns, you must read it repeatedly, read it twice, and recall it once in 5 minutes</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        Rating: These two memories are not counted
                    </TextBlock>
                </ContentControl.Content>
            </ContentControl>
            <Button
                Width="51"
                Height="36"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExecuteAudioPlayClick"
                Cursor="Hand"
                Tag="Next I will read a few words to you. You should listen carefully. After I finish reading, tell me the words you remember: Face. . Velvet. . church. . chrysanthemum. . red">

                <Button.Content>
                    <Image
                        Width="28"
                        Height="24"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Source="{StaticResource crs_sound}"
                        Stretch="Uniform" />
                </Button.Content>
            </Button>
        </StackPanel>
        <theme:LineGrid Height="192" TextBlock.FontSize="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                face
            </TextBlock>
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                Velvet
            </TextBlock>
            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                church
            </TextBlock>
            <TextBlock
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                chrysanthemum
            </TextBlock>
            <TextBlock
                Grid.Column="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                red
            </TextBlock>
            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                The first time
            </TextBlock>
            <ContentControl
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[0]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[0]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[1]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[0]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="1"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[2]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[0]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="1"
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[3]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[0]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="1"
                Grid.Column="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[4]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[0]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis">
                The second time
            </TextBlock>
            <ContentControl
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[0]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[1]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[1]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[1]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="2"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[2]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[1]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="2"
                Grid.Column="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[3]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[1]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
            <ContentControl
                Grid.Row="2"
                Grid.Column="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding AnswerItems[4]}"
                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                DataContext="{Binding ChildrenItems[1]}"
                DockPanel.Dock="Bottom">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="Loaded">
                        <behaviors:ChangePropertyAction
                            PropertyName="Ignore"
                            TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Value="True" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ContentControl>
        </theme:LineGrid>
    </DockPanel>

</UserControl>
