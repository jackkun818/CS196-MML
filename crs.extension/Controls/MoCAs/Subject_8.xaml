<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_8"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="language" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            language
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">Name the animal as many animals as possible in one minute</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        Rating: If the patient said the animal name within 1 minute≥1 point will be awarded if 11 are given. At the same time, note down the patient's answers on the back or both sides of the examination form. Mythical animals such as dragons, phoenixes, and unicorns are also correct
                    </TextBlock>
                </ContentControl.Content>
            </ContentControl>
            <Button
                Width="51"
                Height="36"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExecuteAudioPlayClick"
                Cursor="Hand"
                Tag="Please name the animal as much as possible within 1 minute">

                <Button.Content>
                    <Image
                        Width="28"
                        Height="24"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Source="{StaticResource crs_sound}"
                        Stretch="Uniform" />
                </Button.Content>
            </Button>
        </StackPanel>
        <UniformGrid
            Columns="1"
            Rows="1"
            TextBlock.FontSize="36"
            TextBlock.FontWeight="Bold">
            <DockPanel DataContext="{Binding ChildrenItems[0]}">
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <hc:TextBox
                    Width="1200"
                    Height="100"
                    Margin="0,0,0,90"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="Black"
                    DataContext="{Binding AnswerItems[0]}"
                    DockPanel.Dock="Bottom"
                    FontSize="20"
                    Text="{Binding Remark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="0,0,0,-70"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    （N≥11 words）
                </TextBlock>
            </DockPanel>
        </UniformGrid>
    </DockPanel>

</UserControl>
