<UserControl
    x:Class="crs.extension.Controls.MoCAs.Subject_1_Sub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MoCAs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="975"
    d:DesignWidth="1720"
    mc:Ignorable="d">

    <controls:Crs_Carousel x:Name="carousel" Style="{StaticResource crs_Carousel}">
        <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=hc:Carousel}}" DataContext="{Binding ChildrenItems[0]}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                FontSize="28"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
            <TextBlock
                DockPanel.Dock="Top"
                FontSize="45"
                FontWeight="Bold"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap">
                This is the visual space/Perform functional tests, please alternately connect numbers and text in order.
            </TextBlock>
            <hc:SimplePanel Margin="0,40">
                <controls:Crs_DrawPanel x:Name="drawPanel_0" DrawStrokes="{Binding StrokeItem}">
                    <controls:Crs_DrawPanel.BackgroundElement>
                        <Image Width="622" Source="{StaticResource crs_Title Illustration 4_Big}" />
                    </controls:Crs_DrawPanel.BackgroundElement>
                </controls:Crs_DrawPanel>
            </hc:SimplePanel>
        </DockPanel>
        <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=hc:Carousel}}" DataContext="{Binding ChildrenItems[1]}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                FontSize="28"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
            <TextBlock
                DockPanel.Dock="Top"
                FontSize="45"
                FontWeight="Bold"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap">
                This is the visual space/Perform functional tests, please imitate and draw cubes in the blank space according to the following figures.
            </TextBlock>

            <hc:SimplePanel Margin="0,40">
                <TextBlock
                    Margin="450,90,0,0"
                    HorizontalAlignment="Left"
                    FontSize="30"
                    FontWeight="Bold"
                    Text="(Reference image)" />
                <controls:Crs_DrawPanel
                    x:Name="drawPanel_1"
                    Width="900"
                    HorizontalAlignment="Right"
                    BorderBrush="Black"
                    BorderThickness="1"
                    DrawStrokes="{Binding StrokeItem}" />
                <Image
                    Width="483"
                    Margin="260,0,0,0"
                    HorizontalAlignment="Left"
                    Source="{StaticResource crs_Title Illustration 5_Big}" />
            </hc:SimplePanel>
        </DockPanel>
        <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=hc:Carousel}}" DataContext="{Binding ChildrenItems[2]}">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                FontSize="28"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
            <TextBlock
                DockPanel.Dock="Top"
                FontSize="44"
                FontWeight="Bold"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap">
                This is the visual space/Perform functional tests, please draw a clock in the blank space, fill in all the numbers and point out 11:10
            </TextBlock>
            <hc:SimplePanel Margin="0,40">
                <controls:Crs_DrawPanel x:Name="drawPanel_2" DrawStrokes="{Binding StrokeItem}" />
            </hc:SimplePanel>
        </DockPanel>
    </controls:Crs_Carousel>
</UserControl>
