<UserControl
    x:Class="crs.extension.Controls.MMSEs.Subject_7"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MMSEs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="Language skills" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            Language skills
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">Retelling ability: I will say something now, please repeat it clearly with me</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        Rating: The subject is required to pay attention to what you say and repeat once, and be careful that it is only allowed to repeat once. This sentence is“Forty-four stone lions”, Only those who are correct and pronounce clearly can get 1 point.
                    </TextBlock>
                </ContentControl.Content>
            </ContentControl>
            <Button
                Width="51"
                Height="36"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExecuteAudioPlayClick"
                Cursor="Hand"
                Tag="I want to read a sentence below, please repeat it clearly. This sentence is: Forty-four stone lions.">

                <Button.Content>
                    <Image
                        Width="28"
                        Height="24"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Source="{StaticResource crs_sound}"
                        Stretch="Uniform" />
                </Button.Content>
            </Button>
        </StackPanel>
        <UniformGrid
            Columns="1"
            DataContext="{Binding ChildrenItems[0]}"
            Rows="1"
            TextBlock.FontSize="36"
            TextBlock.FontWeight="Bold">
            <DockPanel>
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    Forty-four stone lions
                </TextBlock>
            </DockPanel>
        </UniformGrid>
    </DockPanel>

</UserControl>
