<UserControl x:Class="crs.extension.Controls.MMSEs.Subject_9_Sub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:controls="clr-namespace:crs.extension.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:crs.extension.Controls.MMSEs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:crs.extension.Models"
             xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
             d:Background="White"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                              Type={x:Type models:SubjectItem}}"
             d:DesignHeight="975"
             d:DesignWidth="1720"
             mc:Ignorable="d">
    <controls:Crs_Carousel Style="{StaticResource crs_Carousel}">
        <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=hc:Carousel}}">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Bottom"
                       FontSize="28"
                       TextAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="Wrap" />
            <hc:SimpleStackPanel Margin="0,0,0,-40"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="45"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap">
                    This is a language proficiency test, please listen carefully and complete it according to the content of the question
                </TextBlock>
            </hc:SimpleStackPanel>
        </DockPanel>


    </controls:Crs_Carousel>
</UserControl>
