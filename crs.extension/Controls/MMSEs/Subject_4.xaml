<UserControl
    x:Class="crs.extension.Controls.MMSEs.Subject_4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MMSEs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="Attention and computing power" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            Attention and computing power
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">Please calculate 100-7＝? Reduce 5 times in a row.（If it is wrong, but the next answer is correct, only one error is remembered）</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        Rating: The patient is required to reduce 7 from 100, then reduce 7, and keep reducing 5 times.（That is, 93, 86, 79, 72, 65）Each answer is correct and you will get one point. If you are wrong the previous time, but the next answer is correct, you will get one point.
                    </TextBlock>
                </ContentControl.Content>
            </ContentControl>
            <Button
                Width="51"
                Height="36"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExecuteAudioPlayClick"
                Cursor="Hand"
                Tag="Now please subtract 7 from one hundred, and then subtract 7 from the obtained number, and calculate five times in total">

                <Button.Content>
                    <Image
                        Width="28"
                        Height="24"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Source="{StaticResource crs_sound}"
                        Stretch="Uniform" />
                </Button.Content>
            </Button>
        </StackPanel>
        <DockPanel DataContext="{Binding ChildrenItems[0]}">
            <TextBlock
                Margin="0,0,0,35"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="28"
                FontWeight="Bold">
                Reference answer:
            </TextBlock>
            <UniformGrid
                Columns="5"
                Rows="1"
                TextBlock.FontSize="36"
                TextBlock.FontWeight="Bold">
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[0]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        93
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[1]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        86
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[2]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        79
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[3]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        72
                    </TextBlock>
                </DockPanel>
                <DockPanel HorizontalAlignment="Center">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding AnswerItems[4]}"
                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                        DockPanel.Dock="Bottom" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextTrimming="CharacterEllipsis">
                        65
                    </TextBlock>
                </DockPanel>
            </UniformGrid>
        </DockPanel>
    </DockPanel>

</UserControl>
