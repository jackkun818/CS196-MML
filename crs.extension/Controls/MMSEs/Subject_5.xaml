<UserControl
    x:Class="crs.extension.Controls.MMSEs.Subject_5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls.MMSEs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:crs.extension.Models"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type models:SubjectItem}}"
    d:DesignHeight="579"
    d:DesignWidth="1400"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            TextBlock.FontSize="32"
            TextBlock.FontWeight="Bold"
            TextTrimming="CharacterEllipsis">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="Loaded">
                    <behaviors:ChangePropertyAction
                        PropertyName="OriginName"
                        TargetObject="{Binding}"
                        Value="回忆能力" />
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
            回忆能力
        </TextBlock>
        <StackPanel
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="28">请你说出我刚才告诉你让你记住的那些东西？</TextBlock>
            <ContentControl
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{StaticResource MMSE_MoCA_ToolTipTemplate}">
                <ContentControl.Content>
                    <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap">
                        评分如果前次被测试者完全记住了3个名称，现在就让他们再重复一遍，每正确重复1个得1分，最高3分。
                    </TextBlock>
                </ContentControl.Content>
            </ContentControl>
            <Button
                Width="51"
                Height="36"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExecuteAudioPlayClick"
                Cursor="Hand"
                Tag="刚才我给您读了几个词让您记住，请您再尽量回忆一下，告诉我这些词都有什么">

                <Button.Content>
                    <Image
                        Width="28"
                        Height="24"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Source="{StaticResource crs_声音}"
                        Stretch="Uniform" />
                </Button.Content>
            </Button>
        </StackPanel>
        <UniformGrid
            Columns="3"
            DataContext="{Binding ChildrenItems[0]}"
            Rows="1"
            TextBlock.FontSize="36"
            TextBlock.FontWeight="Bold">
            <DockPanel>
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[0]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    皮球
                </TextBlock>
            </DockPanel>
            <DockPanel>
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[1]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    国旗
                </TextBlock>
            </DockPanel>
            <DockPanel>
                <ContentControl
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{Binding AnswerItems[2]}"
                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate}"
                    DockPanel.Dock="Bottom" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis">
                    树木
                </TextBlock>
            </DockPanel>
        </UniformGrid>
    </DockPanel>

</UserControl>
