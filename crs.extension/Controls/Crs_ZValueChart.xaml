<UserControl
    x:Class="crs.extension.Controls.Crs_ZValueChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.extension.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="1080"
    d:DesignWidth="1470"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:ZValueChartDoubleToWidthConverter1 x:Key="ZValueChartDoubleToWidthConverter1" />
        <local:ZValueChartDoubleToWidthConverter2 x:Key="ZValueChartDoubleToWidthConverter2" />
        <local:ZValueChartDoubleToHorizontalAlignmentConverter1 x:Key="ZValueChartDoubleToHorizontalAlignmentConverter1" />
        <local:ZValueChartDoubleToHorizontalAlignmentConverter2 x:Key="ZValueChartDoubleToHorizontalAlignmentConverter2" />
        <local:ZValueChartDoubleToMarginConverter x:Key="ZValueChartDoubleToMarginConverter" />
    </UserControl.Resources>
    <hc:SimplePanel>
        <StackPanel>
            <Grid
                x:Name="Z_Standard"
                Width="1470"
                HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Height="150">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                T标准<LineBreak /><LineBreak />
                                百分等级<LineBreak /><LineBreak />
                                Z-标准</TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                20<LineBreak /><LineBreak />
                                0.2<LineBreak /><LineBreak />
                                -3</TextBlock>
                        </Grid>
                        <Grid Grid.Column="2">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                30<LineBreak /><LineBreak />
                                2.3<LineBreak /><LineBreak />
                                -2</TextBlock>
                        </Grid>
                        <Grid Grid.Column="3">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                40<LineBreak /><LineBreak />
                                15.9<LineBreak /><LineBreak />
                                -1</TextBlock>
                        </Grid>
                        <Grid Grid.Column="4">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                50<LineBreak /><LineBreak />
                                50<LineBreak /><LineBreak />
                                0</TextBlock>
                        </Grid>
                        <Grid Grid.Column="5">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                60<LineBreak /><LineBreak />
                                84.1<LineBreak /><LineBreak />
                                1</TextBlock>
                        </Grid>
                        <Grid Grid.Column="6">
                            <TextBlock
                                Margin="-160,0,0,0"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                TextWrapping="Wrap">
                                70<LineBreak /><LineBreak />
                                97.7<LineBreak /><LineBreak />
                                2</TextBlock>
                        </Grid>
                    </Grid>

                </Grid>
            </Grid>


            <ItemsControl
                x:Name="itemsControl"
                DockPanel.Dock="Top"
                ItemsSource="{Binding ZValueChartItems, RelativeSource={RelativeSource AncestorType=local:Crs_ZValueChart}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0">
                            <Grid>
                                <Grid Width="1470" HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="350" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Column="0"
                                        BorderBrush="Black"
                                        BorderThickness="2">
                                        <TextBlock
                                            Margin="0"
                                            HorizontalAlignment="Center"
                                            FontSize="24"
                                            Text="{Binding Key}"
                                            TextWrapping="Wrap" />
                                    </Border>
                                    <Grid Grid.Column="1" ClipToBounds="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.Column="0"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#ff2d2d" />
                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#ff7575" />
                                        </Border>
                                        <Border
                                            Grid.Column="2"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#ffffaf" />
                                        </Border>
                                        <Border
                                            Grid.Column="3"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#79ff79" />
                                        </Border>
                                        <Border
                                            Grid.Column="4"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#6fdb6f" />
                                        </Border>
                                        <Border
                                            Grid.Column="5"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#34cc34" />
                                        </Border>
                                        <Border
                                            Grid.Column="6"
                                            BorderBrush="Black"
                                            BorderThickness="2">
                                            <Rectangle
                                                Width="160"
                                                Height="60"
                                                Fill="#12ae0a" />
                                        </Border>
                                    </Grid>
                                </Grid>

                                <Border
                                    Width="{Binding Value, Converter={StaticResource ZValueChartDoubleToWidthConverter1}}"
                                    Height="30"
                                    Margin="{Binding Value, Converter={StaticResource ZValueChartDoubleToMarginConverter}}"
                                    HorizontalAlignment="{Binding Value, Converter={StaticResource ZValueChartDoubleToHorizontalAlignmentConverter1}}"
                                    Background="#ffc000" />
                                <Border
                                    Width="{Binding Value, Converter={StaticResource ZValueChartDoubleToWidthConverter2}}"
                                    Height="30"
                                    Margin="{Binding Value, Converter={StaticResource ZValueChartDoubleToMarginConverter}}"
                                    HorizontalAlignment="{Binding Value, Converter={StaticResource ZValueChartDoubleToHorizontalAlignmentConverter1}}"
                                    Background="Transparent">
                                    <TextBlock
                                        Height="30"
                                        HorizontalAlignment="{Binding Value, Converter={StaticResource ZValueChartDoubleToHorizontalAlignmentConverter2}}"
                                        FontSize="24"
                                        Text="{Binding Value, StringFormat=\{0\}}" />
                                </Border>
                            </Grid>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </hc:SimplePanel>
</UserControl>
