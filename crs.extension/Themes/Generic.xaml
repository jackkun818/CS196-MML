<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:crs.extension.Controls"
                    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme">

    <Style TargetType="{x:Type local:Crs_SubjectReport}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Crs_SubjectReport}">
                    <theme:LineGrid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="160" />
                        </Grid.ColumnDefinitions>
                        <ContentControl Grid.Row="0" Content="{TemplateBinding LeftContent}" />
                        <ContentControl Grid.Column="1" Content="{TemplateBinding RightContent}" />
                    </theme:LineGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>