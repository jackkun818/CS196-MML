<UserControl
    x:Class="crs.window.Views.Train"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    xmlns:vm="clr-namespace:crs.window.ViewModels"
    xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:TrainViewModel}}"
    d:Height="1080"
    d:Width="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <hc:SimplePanel>
        <DockPanel>
            <Border
                Width="373"
                Margin="25,45,45,45"
                Background="White"
                CornerRadius="8"
                DockPanel.Dock="Right"
                Effect="{StaticResource EffectShadow2}">
                <DockPanel>
                    <Button
                        Width="241"
                        Height="67"
                        Margin="0,30"
                        hc:BorderElement.CornerRadius="8"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        DockPanel.Dock="Bottom"
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Style>
                            <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                                <Setter Property="Command" Value="{Binding StartCommand}" />
                                <Setter Property="Content" Value="Start" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFromSchedule}" Value="True">
                                        <Setter Property="Command" Value="{Binding SaveCommand}" />
                                        <Setter Property="Content" Value="Save" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <hc:SimplePanel
                        Height="50"
                        Margin="25,20,25,5"
                        DockPanel.Dock="Top">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="26"
                            FontWeight="Bold">
                            Training Plan
                        </TextBlock>
                        <Button
                            x:Name="historyToggleButton"
                            Width="144"
                            Height="50"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            hc:BorderElement.CornerRadius="12"
                            Command="{Binding HistoryProgramCommand}"
                            Effect="{StaticResource EffectShadow2}">
                            <Button.Style>
                                <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                                    <Setter Property="Foreground" Value="{StaticResource crs_SolidColorBrush.F89F00}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HistoryIsOpen}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource crs_SolidColorBrush.F89F00}" />
                                            <Setter Property="Foreground" Value="White" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <hc:SimplePanel
                                    Width="26"
                                    Height="22"
                                    VerticalAlignment="Center"
                                    Background="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}">
                                    <hc:SimplePanel.OpacityMask>
                                        <ImageBrush ImageSource="{StaticResource crs_历史方案}" />
                                    </hc:SimplePanel.OpacityMask>
                                </hc:SimplePanel>
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}">
                                    History
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        <theme:PopupEx
                            x:Name="historyPopup"
                            AllowsTransparency="True"
                            HorizontalOffset="0"
                            IsOpen="{Binding HistoryIsOpen}"
                            Placement="Left"
                            PlacementTarget="{Binding ElementName=historyToggleButton}"
                            StaysOpen="{Binding HistoryStaysOpen}"
                            Topmost="False">
                            <hc:SimplePanel IsEnabled="{Binding HistoryStaysOpen, Converter={StaticResource crs_Boolean2ReversalConverter}}">
                                <Border
                                    Width="373"
                                    Height="850"
                                    Margin="10"
                                    Background="White"
                                    CornerRadius="9"
                                    Effect="{StaticResource EffectShadow2}">
                                    <ListBox
                                        Margin="20,15"
                                        HorizontalContentAlignment="Stretch"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        DockPanel.Dock="Top"
                                        ItemContainerStyle="{StaticResource ListBoxItemCustom}"
                                        ItemsSource="{Binding TrainHistoryProgramItems}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    x:Name="border"
                                                    Margin="5,10"
                                                    Background="White"
                                                    CornerRadius="8"
                                                    Effect="{StaticResource EffectShadow2}">
                                                    <DockPanel TextBlock.FontSize="18">
                                                        <DockPanel Margin="0,0,15,15" DockPanel.Dock="Bottom">
                                                            <Button
                                                                Width="80"
                                                                Height="32"
                                                                VerticalAlignment="Center"
                                                                hc:BorderElement.CornerRadius="16"
                                                                Background="{StaticResource crs_SolidColorBrush.F89F00}"
                                                                Command="{Binding DataContext.ImportCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                CommandParameter="{Binding}"
                                                                DockPanel.Dock="Right"
                                                                FontSize="16"
                                                                FontWeight="Bold"
                                                                Foreground="White">
                                                                Import
                                                            </Button>
                                                            <TextBlock
                                                                Margin="15,0,0,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="16.5"
                                                                FontWeight="Bold"
                                                                Opacity="0.7"
                                                                Text="{Binding CreateTime, StringFormat={}日期：{0:yyyy-MM-dd HH:mm}, TargetNullValue=日期：--, FallbackValue=日期：--}" />
                                                        </DockPanel>
                                                        <DockPanel Margin="0,10" DockPanel.Dock="Top">
                                                            <Button
                                                                Width="26"
                                                                Height="26"
                                                                Margin="0,0,30,0"
                                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                CommandParameter="{Binding}"
                                                                DockPanel.Dock="Right">
                                                                <Button.Background>
                                                                    <ImageBrush ImageSource="{StaticResource crs_删除}" />
                                                                </Button.Background>
                                                            </Button>
                                                            <Image
                                                                Width="33"
                                                                Height="33"
                                                                Margin="20,0,0,0"
                                                                DockPanel.Dock="Left"
                                                                Source="{Binding Mode, Converter={StaticResource crs_ModeBitmapImageConverter}}" />
                                                            <TextBlock
                                                                Margin="20,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="20"
                                                                FontWeight="Bold"
                                                                Text="{Binding Mode, TargetNullValue=--, FallbackValue=--}"
                                                                TextTrimming="CharacterEllipsis" />
                                                        </DockPanel>
                                                        <TextBlock
                                                            Margin="20,3"
                                                            LineHeight="33"
                                                            Opacity="0.6"
                                                            Text="{Binding Item.MessageInfo, TargetNullValue=--, FallbackValue=--}"
                                                            TextTrimming="CharacterEllipsis"
                                                            TextWrapping="Wrap" />
                                                    </DockPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </hc:SimplePanel>
                        </theme:PopupEx>
                    </hc:SimplePanel>
                    <ListBox
                        Margin="20,0"
                        HorizontalContentAlignment="Stretch"
                        Background="Transparent"
                        BorderThickness="0"
                        DockPanel.Dock="Top"
                        ItemContainerStyle="{StaticResource ListBoxItemCustom}"
                        ItemsSource="{Binding TrainProgramItems}"
                        SelectedItem="{Binding TrainProgramSelectedItem}"
                        SelectionChanged="ListBox_SelectionChanged">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    x:Name="border"
                                    Margin="5,10"
                                    Background="White"
                                    CornerRadius="8"
                                    Effect="{StaticResource EffectShadow2}">
                                    <DockPanel TextBlock.FontSize="18">
                                        <DockPanel Margin="0,10" DockPanel.Dock="Top">
                                            <Button
                                                Width="26"
                                                Height="26"
                                                Margin="0,0,30,0"
                                                Command="{Binding DataContext.DeleteProgramCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                DockPanel.Dock="Right">
                                                <Button.Background>
                                                    <ImageBrush ImageSource="{StaticResource crs_删除}" />
                                                </Button.Background>
                                            </Button>
                                            <Image
                                                Width="33"
                                                Height="33"
                                                Margin="20,0,0,0"
                                                DockPanel.Dock="Left"
                                                Source="{Binding Mode, Converter={StaticResource crs_ModeBitmapImageConverter}}" />
                                            <TextBlock
                                                Margin="20,0"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Text="{Binding Mode, TargetNullValue=--, FallbackValue=--}"
                                                TextTrimming="CharacterEllipsis" />

                                        </DockPanel>
                                        <TextBlock
                                            Margin="20,3"
                                            LineHeight="33"
                                            Opacity="0.6"
                                            Text="{Binding Item.MessageInfo, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="Wrap" />
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <DockPanel Margin="45,45,0,45">
                <ListBox
                    Margin="0"
                    Padding="0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    BorderThickness="0"
                    DockPanel.Dock="Top"
                    ItemsSource="{Binding TrainTypeItems}"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    SelectedItem="{Binding TrainTypeSelectedItem}">
                    <ListBox.Style>
                        <Style BasedOn="{StaticResource {x:Type ListBox}}" TargetType="ListBox" />
                    </ListBox.Style>
                    <hc:Interaction.Triggers>
                        <hc:EventTrigger EventName="SelectionChanged">
                            <hc:InvokeCommandAction Command="{Binding TrainTypeSelectedItemChangedCommand}" />
                        </hc:EventTrigger>
                    </hc:Interaction.Triggers>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Margin="-4,1,-4,0" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource ListBoxItemCustom}" TargetType="ListBoxItem" />
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                x:Name="border"
                                Width="217"
                                Height="65"
                                Margin="6,2,6,0"
                                Background="{StaticResource crs_SolidColorBrush.F8F8F8}"
                                CornerRadius="6 6 0 0"
                                Effect="{StaticResource EffectShadow2}">
                                <TextBlock
                                    x:Name="textBlock"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="28"
                                    Text="{Binding Item1, TargetNullValue=--, FallbackValue=--}"
                                    TextTrimming="CharacterEllipsis" />
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource crs_SolidColorBrush.F89F00}" />
                                    <Setter TargetName="textBlock" Property="Foreground" Value="White" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource EffectShadow1}">
                    <DockPanel>
                        <Button
                            Width="241"
                            Height="67"
                            Margin="0,30"
                            hc:BorderElement.CornerRadius="8"
                            Background="{StaticResource crs_SolidColorBrush.F89F00}"
                            Command="{Binding AddCommand}"
                            DockPanel.Dock="Bottom"
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="White">
                            Add
                        </Button>

                        <StackPanel
                            Height="50"
                            Margin="40,20,0,5"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <Image
                                Width="30"
                                Height="30"
                                VerticalAlignment="Center"
                                Source="{StaticResource crs_模式选择}" />
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold">
                                Select Mode
                            </TextBlock>
                        </StackPanel>
                        <ListBox
                            Height="240"
                            Margin="65,0"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Stretch"
                            hc:ScrollViewer.IsInertiaEnabled="True"
                            hc:ScrollViewerAttach.Orientation="Horizontal"
                            BorderThickness="0"
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding TrainModeItems}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            SelectedItem="{Binding TrainModeSelectedItem}">
                            <ListBox.Style>
                                <Style BasedOn="{StaticResource {x:Type ListBox}}" TargetType="ListBox" />
                            </ListBox.Style>
                            <hc:Interaction.Triggers>
                                <hc:EventTrigger EventName="SelectionChanged">
                                    <hc:InvokeCommandAction Command="{Binding TrainModeSelectedItemChangedCommand}" />
                                </hc:EventTrigger>
                            </hc:Interaction.Triggers>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style BasedOn="{StaticResource ListBoxItemCustom}" TargetType="ListBoxItem" />
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        x:Name="border"
                                        Width="171"
                                        Height="234"
                                        Margin="16,0"
                                        Background="White"
                                        BorderBrush="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                        BorderThickness="5"
                                        CornerRadius="4"
                                        Effect="{StaticResource EffectShadow2}">
                                        <DockPanel>
                                            <Rectangle
                                                Width="60"
                                                Height="5"
                                                DockPanel.Dock="Top"
                                                Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                                RadiusX="2"
                                                RadiusY="2" />
                                            <TextBlock
                                                Margin="0,30,0,0"
                                                HorizontalAlignment="Center"
                                                DockPanel.Dock="Top"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Text="{Binding Mode, TargetNullValue=--, FallbackValue=--}"
                                                TextTrimming="CharacterEllipsis" />
                                            <hc:Gravatar
                                                Width="94"
                                                Height="94"
                                                Margin="0,0,0,5"
                                                Style="{StaticResource GravatarCircleImg}">
                                                <Image Source="{Binding Mode, Converter={StaticResource crs_ModeBitmapImageConverter}}" />
                                            </hc:Gravatar>
                                        </DockPanel>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource crs_SolidColorBrush.F89F00}" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel
                            Height="50"
                            Margin="40,10,0,5"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <Image
                                Width="30"
                                Height="30"
                                VerticalAlignment="Center"
                                Source="{StaticResource crs_参数调节}" />
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold">
                                Parameter Settings
                            </TextBlock>
                        </StackPanel>

                        <ListBox
                            Height="260"
                            Margin="65,0"
                            HorizontalContentAlignment="Stretch"
                            hc:ScrollViewer.IsInertiaEnabled="True"
                            BorderThickness="0"
                            DataContext="{Binding TrainModeSelectedItem}"
                            DockPanel.Dock="Top"
                            ItemContainerStyle="{StaticResource ListBoxItemCustom}"
                            ItemsSource="{Binding ModuleParItems}"
                            TextBlock.FontSize="18">
                            <ListBox.Style>
                                <Style BasedOn="{StaticResource {x:Type ListBox}}" TargetType="ListBox" />
                            </ListBox.Style>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <wpfToolkit:VirtualizingWrapPanel Margin="-20,23,-20,-23" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel
                                        Width="440"
                                        Height="61"
                                        Margin="30,0,30,25"
                                        LastChildFill="False">
                                        <Slider
                                            Width="310"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Right"
                                            Maximum="{Binding MaxValue}"
                                            Minimum="{Binding MinValue}"
                                            Tag="{Binding Unit}"
                                            TickFrequency="{Binding StepSize}"
                                            Value="{Binding DefaultValue}" />
                                        <TextBlock
                                            Margin="0,13,20,0"
                                            VerticalAlignment="Top"
                                            FontWeight="Bold"
                                            Text="{Binding Name, StringFormat={}{0}}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="Wrap" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <DockPanel
                            Height="47"
                            Margin="40,10,0,5"
                            VerticalAlignment="Top"
                            DockPanel.Dock="Top">
                            <DockPanel.Resources>
                                <Style BasedOn="{StaticResource RadioButtonBaseStyle}" TargetType="RadioButton">
                                    <Style.Triggers>
                                        <Trigger Property="ToggleButton.IsChecked" Value="true">
                                            <Setter Property="Background" Value="{StaticResource crs_SolidColorBrush.F89F00}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Resources>
                            <Image
                                Width="30"
                                Height="30"
                                VerticalAlignment="Center"
                                Source="{StaticResource crs_反馈}" />
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold">
                                Feedback
                            </TextBlock>

                            <hc:SimplePanel
                                Height="35"
                                Margin="90,0"
                                VerticalAlignment="Center">
                                <ListBox
                                    x:Name="feedbackListBox"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    hc:ScrollViewer.IsInertiaEnabled="True"
                                    hc:ScrollViewerAttach.Orientation="Horizontal"
                                    BorderThickness="0"
                                    DataContext="{Binding TrainModeSelectedItem}"
                                    DockPanel.Dock="Top"
                                    ItemContainerStyle="{StaticResource ListBoxItemCustom}"
                                    ItemsSource="{Binding FeedbackModuleParItems}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                    TextBlock.FontSize="18">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Margin="-20,0,0,5" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Viewbox>
                                                <CheckBox
                                                    Margin="15,0"
                                                    HorizontalAlignment="Left"
                                                    FontWeight="Bold"
                                                    IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <TextBlock Text="{Binding Name, FallbackValue=--, TargetNullValue=--}" />
                                                </CheckBox>
                                            </Viewbox>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </hc:SimplePanel>
                        </DockPanel>
                    </DockPanel>
                </Border>
            </DockPanel>
        </DockPanel>
        <DockPanel
            Height="45"
            Margin="45,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            LastChildFill="False"
            Visibility="{Binding IsFromSchedule, Converter={StaticResource crs_Boolean2VisibilityCollapsedConverter}}">
            <Image
                Height="35"
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Source="{StaticResource crs_提示灯}" />
            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="DemiBold"
                Opacity="0.6">
                Please set the plan parameters according to the doctor's prescription:
            </TextBlock>
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Opacity="1"
                Text="{Binding DiagnosisInfo, StringFormat={}{0}。, TargetNullValue=--, FallbackValue=--}" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="DemiBold"
                Opacity="0.6"
                TextTrimming="CharacterEllipsis">
                Add the plan on the right, then click save.
            </TextBlock>
        </DockPanel>
    </hc:SimplePanel>
</UserControl>
