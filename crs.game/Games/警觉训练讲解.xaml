<local:BaseUserControl x:Class="crs.game.Games.警觉训练讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="923"
                       Background="Transparent"
                       mc:Ignorable="d">
    <Grid>

        <Grid x:Name="ALL_Canvs" Visibility="Hidden">
            <Canvas Name="canvas"
                    Width="1340"
                    Height="923"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" />
            <MediaElement x:Name="audioPlayer"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop" />
            <TextBlock x:Name="Text_Result"
                       Width="500"
                       Margin="0,50,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       Text="回答正确"
                       TextWrapping="Wrap"
                       Visibility="Hidden" />
            <Button x:Name="end"
                    Width="241"
                    Height="67"
                    Margin="0,0,180,65"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    Content="进入测试"
                    Cursor="Hand"
                    FontSize="40"
                    Foreground="White"
                    Visibility="Hidden">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <Viewbox>
            <Grid Width="1340" Height="923">
                <TextBlock x:Name="Text_1"
                           Margin="25,25,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="现在您可以看到屏幕上有一个道路上的图像。"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="90,90,90,90"
                       Visibility="Visible" />
                <TextBlock x:Name="Text_2"
                           Margin="25,25,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="接下来图像上会出现一个物体，当您看到物体出现时，请迅速按下按键。"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="100,100,100,100"
                       Visibility="Hidden" />

                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="上一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="下一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="跳过"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>

    </Grid>
</local:BaseUserControl>
