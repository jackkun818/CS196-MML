<local:BaseUserControl x:Class="crs.game.Games.Eye-motion drive explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="923"
                       Background="#fef9ed"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.4*" />
            </Grid.RowDefinitions>
            <Button x:Name="OkButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="160"
                    Height="80"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="OkButton_Click"
                    Content="Enter training"
                    FontSize="35"
                    Visibility="Hidden" />


        </Grid>

        <Grid x:Name="page_panel"
              Margin="0,0,319,0"
              Background="#FFFFFAF2"
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid x:Name="page_0"
                      Margin="10"
                      Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Canvas Grid.Row="0" Margin="0,0,0,121">
                        <Image x:Name="playerImage0"
                               Grid.Row="0"
                               Grid.Column="0"
                               Canvas.Left="100"
                               Canvas.Top="200"
                               Height="150"
                               Margin="10"
                               Stretch="Fill" />
                        <Ellipse Canvas.Left="600"
                                 Canvas.Top="250"
                                 Width="50"
                                 Height="50"
                                 Stroke="Red"
                                 StrokeThickness="1" />
                    </Canvas>
                    <TextBlock x:Name="page_0_message"
                               Grid.Row="1"
                               Margin="10"
                               FontSize="45"
                               Text="Now you can see the basketball on the interface, and the red circle represents the focus of your current line of sight"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap" />
                </Grid>

                <Grid x:Name="page_1"
                      Margin="10"
                      Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Canvas x:Name="canvas"
                            Grid.Row="0"
                            Width="1000"
                            Height="600"
                            Margin="10,10,253,80" />


                    <TextBlock x:Name="page_1_message"
                               Grid.Row="1"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Margin="10"
                               FontSize="45"
                               Text="Please pull the basketball through the gaze point of your sight, so that the basketball can move along the track"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap" />

                </Grid>
            </Grid>

            <StackPanel Grid.Row="1"
                        Margin="0,10,0,60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button x:Name="lastButton"
                        Width="200"
                        Height="70"
                        Margin="10,0"
                        hc:BorderElement.CornerRadius="8"
                        Background="#FFF89F00"
                        Click="lastButton_Click"
                        Content="Previous"
                        Cursor="Hand"
                        Focusable="False"
                        FontSize="36"
                        Foreground="White"
                        IsEnabled="False" />
                <Button x:Name="nextButton"
                        Width="200"
                        Height="70"
                        Margin="10,0"
                        hc:BorderElement.CornerRadius="8"
                        Background="#FFF89F00"
                        Click="nextButton_Click"
                        Content="Next step"
                        Cursor="Hand"
                        Focusable="False"
                        FontSize="36"
                        Foreground="White" />
                <Button x:Name="ignoreButton"
                        Width="200"
                        Height="70"
                        Margin="10,0"
                        hc:BorderElement.CornerRadius="8"
                        Background="#FFF89F00"
                        Click="ignoreButton_Click"
                        Content="jump over"
                        Cursor="Hand"
                        Focusable="False"
                        FontSize="36"
                        Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</local:BaseUserControl>