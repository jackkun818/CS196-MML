<local:BaseUserControl x:Class="crs.game.Games.Search ability 1 explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="20*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="Transparent" />
            <Grid x:Name="MainGrid" Grid.Column="0">

                <!--  Initial Hidden  -->
            </Grid>
            <Grid Name="OverLayGrid" Grid.Column="1">
                <Grid x:Name="MainGrid2" Grid.Column="1">
                    <Button x:Name="confirm"
                            Width="241"
                            Height="67"
                            Margin="18,820,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Panel.ZIndex="10"
                            Background="#F89F00"
                            Click="confirmButton_Click2"
                            Content="OK"
                            FontFamily="Microsoft YaHei"
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="White" />

                    <Button x:Name="confirm1"
                            Width="241"
                            Height="67"
                            Margin="0,802,0,0"
                            VerticalAlignment="Top"
                            Background="#F89F00"
                            Click="confirmButton_Click"
                            Content="OK"
                            FontSize="40"
                            Foreground="White"
                            Visibility="Collapsed" />
                    <Button x:Name="end"
                            Width="240"
                            Height="66"
                            Margin="0,724,0,0"
                            VerticalAlignment="Top"
                            Background="#F89F00"
                            Click="end_Click"
                            Content="Enter the game"
                            FontFamily="Microsoft YaHei"
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="White"
                            RenderTransformOrigin="0.462,1.508" />

                    <TextBlock x:Name="modeTextBlock"
                               Width="196"
                               Height="120"
                               Margin="0,126,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontSize="38"
                               Foreground="Black"
                               Text=""
                               TextWrapping="Wrap" />
                    <Image x:Name="CorrectImage"
                           Grid.Row="1"
                           Grid.Column="1"
                           Width="300"
                           Height="200"
                           VerticalAlignment="Top"
                           Visibility="Collapsed" />
                    <Image Name="ErrorImage"
                           Grid.Row="1"
                           Grid.Column="1"
                           Width="300"
                           Height="200"
                           VerticalAlignment="Top"
                           Visibility="Collapsed" />
                    <Border x:Name="textBlock"
                            Width="210"
                            Height="73"
                            Margin="0,306,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="2"
                            Visibility="Collapsed">
                        <!--  Initial Hidden  -->
                        <TextBlock x:Name="displayTextBlock"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="60"
                                   Foreground="Black" />
                    </Border>

                    <Canvas x:Name="myCanvas"
                            Margin="0,371,0,0"
                            Background="Transparent"
                            Visibility="Collapsed">
                        <Button Canvas.Left="20"
                                Canvas.Top="20"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="1"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="100"
                                Canvas.Top="20"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="2"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="180"
                                Canvas.Top="20"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="3"
                                FontSize="24"
                                Foreground="White" />

                        <!--  Row 2  -->
                        <Button Canvas.Left="20"
                                Canvas.Top="100"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="4"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="100"
                                Canvas.Top="100"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="5"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="180"
                                Canvas.Top="100"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="6"
                                FontSize="24"
                                Foreground="White" />

                        <!--  Row 3  -->
                        <Button Canvas.Left="20"
                                Canvas.Top="180"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="7"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="100"
                                Canvas.Top="180"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="8"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="180"
                                Canvas.Top="180"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="9"
                                FontSize="24"
                                Foreground="White" />

                        <!--  Row 4  -->
                        <Button Canvas.Left="20"
                                Canvas.Top="260"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnBackButtonClick"
                                Content="←"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="100"
                                Canvas.Top="260"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnNumberButtonClick"
                                Content="0"
                                FontSize="24"
                                Foreground="White" />
                        <Button Canvas.Left="180"
                                Canvas.Top="260"
                                Width="60"
                                Height="60"
                                Background="#F89F00"
                                Click="OnSubmitButtonClick"
                                Content="✔"
                                FontSize="24"
                                Foreground="White" />
                    </Canvas>
                </Grid>
            </Grid>

        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <TextBlock x:Name="Text_1"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="45"
                           Text="You will see several numbers in the white box"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="258,250,256,250"
                       Source="./pic/EXO2/3.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="209,55,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="45"
                           Text="Now please find out the missing number, click and press“√”"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="129,250,129,250"
                       Source="./pic/EXO2/4.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

        </Viewbox>
        <Canvas x:Name="CursorCanvas"
                Panel.ZIndex="9999"
                IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Visible" />
        </Canvas>
    </Grid>
</local:BaseUserControl>

