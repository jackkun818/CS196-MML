<local:BaseUserControl x:Class="crs.game.Games.Appearance and memory"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:crs.game"
                       Width="1340"
                       Height="923"
                                              Background="#0000"
                       >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="555*" />
            <ColumnDefinition Width="83*" />
            <ColumnDefinition Width="16*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="34*" />

            <RowDefinition Height="667*" />
            <RowDefinition Height="Auto" MinHeight="0" />
            <RowDefinition Height="222*" />
        </Grid.RowDefinitions>


        <Border Grid.RowSpan="4"
                Grid.ColumnSpan="4"
                Margin="0,0,0,10">
            <Image x:Name="imageControl"
                   Width="1000"
                   Height="500"
                   Margin="200,180,200,200"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </Border>


        <Grid Grid.Row="3"
              Grid.Column="1"
              Grid.ColumnSpan="2"
              Width="972"
              Height="144"
              Margin="0,10,0,0"
              HorizontalAlignment="Center"
              VerticalAlignment="Top">
            <StackPanel x:Name="thumbnailPanel"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </StackPanel.RenderTransform>
            </StackPanel>
        </Grid>

        <Canvas Grid.RowSpan="4" Grid.ColumnSpan="4">


            <TextBlock x:Name="InfoText1"
                       Canvas.Left="1120"
                       Canvas.Top="400"
                       Canvas.Right="100"
                       Width="160"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="30"
                       Foreground="Black"
                       Text="" />
            <TextBlock x:Name="InfoText2"
                       Canvas.Left="1124"
                       Canvas.Top="400"
                       Canvas.Right="100"
                       Width="190"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="30"
                       Foreground="Black"
                       RenderTransformOrigin="0.5,0.5"
                       Text=""
                       TextWrapping="Wrap" />
            <TextBlock x:Name="InfoText3"
                       Canvas.Left="430"
                       Canvas.Top="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Microsoft YaHei"
                       FontSize="40"
                       FontWeight="Bold"
                       RenderTransformOrigin="0.5,0.5"
                       Text="Please remember the following character image information" />
            <TextBlock x:Name="InfoText4"
                       Canvas.Left="640"
                       Canvas.Top="850"
                       Canvas.Right="50"
                       Width="160"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="40"
                       Foreground="Red"
                       RenderTransformOrigin="0.5,0.5"
                       Text="" />
            <TextBlock x:Name="InfoText5"
                       Canvas.Left="1139"
                       Canvas.Top="140"
                       Canvas.Right="100"
                       Width="160"
                       FontSize="30"
                       Foreground="White"
                       Text="" />
            <TextBlock x:Name="CountdownTextBlock"
                       Canvas.Left="1243"
                       Canvas.Top="265"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="24" />
            <Button x:Name="Button1"
                    Canvas.Left="1039"
                    Canvas.Top="850"
                    Canvas.Right="55"
                    Width="241"
                    Height="67"
                    Background="#FFF89F00"
                    Click="PressContinue_Button"
                    Content="Memory completion"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <Image Name="CorrectOrNot"
                   Canvas.Left="600"
                   Canvas.Top="33"
                   Width="150"
                   Height="200" />
        </Canvas>
    </Grid>
</local:BaseUserControl>
