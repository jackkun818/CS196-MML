<local:BaseUserControl x:Class="crs.game.Games.Response_ability"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition x:Name="ImageGrid" Width="13*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border x:Name="BorderElement"
                Grid.ColumnSpan="6"
                Margin="13,10,0,0" />
        <Grid Grid.Column="1">
            <Image x:Name="RandomImage"
                   Width="200"
                   Height="200" />
        </Grid>
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image x:Name="Left"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Visibility="Visible" />
            <Viewbox x:Name="left_arrow"
                     Grid.Row="1"
                     Grid.Column="1"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center">
                <TextBlock Text="= ←" Visibility="Visible" />
            </Viewbox>
            <Image x:Name="Right"
                   Grid.Row="2"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Visibility="Visible" />
            <Viewbox x:Name="right_arrow"
                     Grid.Row="2"
                     Grid.Column="1"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Visibility="Visible">
                <TextBlock Text="= →" />
            </Viewbox>
            <Image x:Name="Forbid"
                   Grid.Row="3"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Visibility="Visible" />
            <Viewbox x:Name="forbid"
                     Grid.Row="3"
                     Grid.Column="1"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Visibility="Visible">
                <TextBlock Text="= ↓ " />
            </Viewbox>
            <Image x:Name="Forward"
                   Grid.Row="4"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   Visibility="Visible" />
            <Viewbox x:Name="forward"
                     Grid.Row="4"
                     Grid.Column="1"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Visibility="Visible">
                <TextBlock Text="= ↑ " />
            </Viewbox>

        </Grid>
        <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Grid.Row="0"
                   Grid.Column="2"
                   Canvas.Left="650"
                   Canvas.Top="799"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Hidden" />
        </Canvas>
    </Grid>
</local:BaseUserControl>

