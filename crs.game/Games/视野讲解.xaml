<local:BaseUserControl
    x:Class="crs.game.Games.视野讲解"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1340"
    Height="920"
    Background="#0000"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="grid_0" Visibility="Visible">
            <Grid x:Name="grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>



            <Ellipse
                x:Name="OrangeDot"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="Orange" />
            <Ellipse
                x:Name="WhiteDot"
                Width="30"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="White"
                Visibility="Collapsed" />

            <Line
                x:Name="line"
                Stroke="Orange"
                StrokeThickness="0"
                X1="670"
                X2="0"
                Y1="461.5"
                Y2="0" />
            <Button
                x:Name="continueButton"
                Width="241"
                Height="67"
                Margin="917,724,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Orange"
                Click="OnContinueButton_Click"
                Content="继续"
                FontSize="42"
                Foreground="White"
                Visibility="Hidden" />
            <Image
                x:Name="image"
                Margin="437,451,707,445"
                Source="pic/VITE/4.png"
                Stretch="Fill"
                Visibility="Hidden" />

            <MediaElement
                x:Name="audioPlayer"
                LoadedBehavior="Manual"
                UnloadedBehavior="Stop" />
            <!--  图片控件，用于显示反馈  -->
            <Image
                x:Name="CorrectImage"
                Width="300"
                Height="200"
                Margin="0,60,150,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Visibility="Collapsed" />
            <Image
                Name="ErrorImage"
                Width="300"
                Height="200"
                Margin="0,60,150,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Visibility="Collapsed" />

            <Button
                x:Name="end"
                Width="241"
                Height="67"
                Margin="0,0,180,65"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#FFF89F00"
                Click="OkButton_Click"
                Content="进入测试"
                Cursor="Hand"
                FontSize="40"
                Foreground="White"
                Visibility="Hidden" />
        </Grid>



        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button
                    x:Name="Button_1"
                    Width="241"
                    Height="67"
                    Margin="189,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_1_Click"
                    Content="上一步"
                    Cursor="Hand"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Button_2"
                    Width="241"
                    Height="67"
                    Margin="550,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_2_Click"
                    Content="下一步"
                    Cursor="Hand"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Button_3"
                    Width="241"
                    Height="67"
                    Margin="911,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_3_Click"
                    Content="跳过"
                    Cursor="Hand"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Image
                    x:Name="Image_3"
                    Margin="0,300,0,200"
                    Source="./pic/VITE/1.png"
                    Visibility="Hidden" />
                <Ellipse
                    x:Name="OrangeDot1"
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="Orange"
                    Visibility="Collapsed" />
                <Ellipse
                    x:Name="whiteDot"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="White"
                    Visibility="Hidden" />
                <Line
                    x:Name="Line"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stroke="Orange"
                    StrokeThickness="20"
                    X1="0"
                    X2="-150"
                    Y1="0"
                    Y2="-150" />



                <TextBlock
                    x:Name="Text_1"
                    Margin="210,50,158,818"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="现在您会在界面先看到一个橙色圆心"
                    TextWrapping="Wrap" />

                <TextBlock
                    x:Name="Text_2"
                    Margin="210,50,158,818"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="当您看到以下图形时，请不要做出反应"
                    TextWrapping="Wrap"
                    Visibility="Hidden" />

                <TextBlock
                    x:Name="Text_3"
                    Margin="210,50,158,818"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="当您看到以下图形时，请按下“OK”键"
                    TextWrapping="Wrap"
                    Visibility="Hidden" />

            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>