<local:BaseUserControl x:Class="crs.game.Games.Search ability 2 explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Transparent" />
        <Grid x:Name="MainGrid" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="60*" />
            </Grid.RowDefinitions>
            <!--  Image controls for displaying feedback  -->
            <Image x:Name="CorrectImage"
                   Grid.Row="0"
                   Grid.Column="0"
                   Width="300"
                   Height="200"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Panel.ZIndex="96"
                   Visibility="Collapsed" />
            <Image Name="ErrorImage"
                   Grid.Row="0"
                   Grid.Column="0"
                   Width="300"
                   Height="200"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Panel.ZIndex="99"
                   Visibility="Collapsed" />
            <Grid x:Name="OverLayImageGrid"
                  Grid.Row="0"
                  Background="Transparent" />
            <Grid x:Name="SelectImageGrid"
                  Grid.Row="1"
                  Background="Transparent" />
            <!--  Initial Hidden  -->
        </Grid>
        <Grid x:Name="MainGrid2" Grid.Row="1">
            <UniformGrid Name="ExplainButtonsGrid" Columns="3">
                <Button x:Name="LastStep"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="LastStep_Click"
                        Content="Previous"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed" />
                <Button x:Name="NextStep"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="NextStep_Click"
                        Content="Next step"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="Try"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="#F89F00"
                        Click="Try_Click"
                        Content="Trial"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="Skip"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="Skip_Click"
                        Content="jump over"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </UniformGrid>

            <Button x:Name="confirm"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="confirmButton_Click2"
                    Content="OK"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Collapsed" />
        </Grid>

        <Viewbox x:Name="ExplainViewBox" Panel.ZIndex="99">
            <Grid Width="1340"
                  Height="920"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Image x:Name="OverLay"
                       Width="1200"
                       Height="503"
                       Margin="70,135,70,0"
                       VerticalAlignment="Top"
                       Source=" ./pic/EXOExplain/OverLay.png" />
                <Image x:Name="Choice"
                       Width="1200"
                       Height="300"
                       Margin="70,643,70,0"
                       VerticalAlignment="Top"
                       Source=" ./pic/EXOExplain/Choice.png"
                       Visibility="Collapsed" />
                <TextBlock Name="Tip"
                           Margin="0,39,0,0"
                        FontFamily="Microsoft YaHei"
                        FontSize="45"
                                                  HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                           Text="Below you will see several shapes overlapping" />
                <Image x:Name="Total"
                       Width="1200"
                       Height="800"
                       Margin="70,120,70,0"
                       VerticalAlignment="Top"
                       Source=" ./pic/EXOExplain/Total.png"
                       Visibility="Collapsed" />
            </Grid>

        </Viewbox>
        <Canvas x:Name="CursorCanvas"
                Panel.ZIndex="99999"
                IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Visible" />
        </Canvas>
    </Grid>
</local:BaseUserControl>

