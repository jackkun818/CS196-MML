<local:BaseUserControl x:Class="crs.game.Games.视觉修复训练讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       PreviewKeyDown="Window_PreviewKeyDown"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid x:Name="MainGrid"
                  Margin="200,180,200,200"
                  Background="Black">
                <Ellipse x:Name="FocusPoint"
                         Width="40"
                         Height="40"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Fill="Green" />
            </Grid>
            <TextBlock Margin="0,55,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       Text="看到中心点发生变化后立刻按下OK，在看到白色方形闪烁后立刻按下OK"
                       TextWrapping="Wrap"
                       Visibility="Hidden" />
        </Grid>


        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="上一步"
                        Cursor="Hand"
                        Focusable="False"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,853,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="下一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="跳过"
                        Cursor="Hand"
                        Focusable="False"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="现在屏幕中央有一个固定的绿点，请您注视着它"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="200,180,200,200"
                       Cursor=""
                       Source="./pic/RESE/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="当屏幕中央的绿点发生变化时，请您按下OK键"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="200,180,200,200"
                       RenderTransformOrigin="0.496,1.037"
                       Source="./pic/RESE/2.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_3"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="当屏幕中央出现白色小方块时，请您按下OK键"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_3"
                       Margin="200,180,200,200"
                       Source="./pic/RESE/3.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>
