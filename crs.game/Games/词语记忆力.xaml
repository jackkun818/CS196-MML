<local:BaseUserControl x:Class="crs.game.Games.词语记忆力"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid Margin="20">
        <!--
            以下是记忆阶段时的组件
        -->
        <!--  下面这个TextBlock是记忆阶段的TextBlock，记忆完了要隐藏掉，默认隐藏，需要手动显示  -->
        <StackPanel HorizontalAlignment="Center">
            <TextBlock x:Name="MemorizeTipTextBlock"
                       Width="1302"
                       Height="57"
                       Margin="0,50,0,0"
                       FontFamily="Times New Roman"
                       FontSize="57"
                       FontWeight="Bold"
                       Text="请您记住下列词语"
                       TextAlignment="Center" />
            <TextBlock x:Name="WordsToMemorizeTextBLock"
                       Width="1302"
                       Height="200"
                       Margin="0,200,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Times New Roman"
                       FontSize="57"
                       FontWeight="Bold"
                       Text="Words"
                       TextAlignment="Center" />

        </StackPanel>
        <!--  下面这个Button是记忆阶段的Button，点击过了要隐藏掉，默认隐藏，需要手动显示  -->
        <Button Name="MemorizeOKButton"
                Width="241"
                Height="62"
                Margin="0,600,0,50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#F89F00"
                Click="MemorizeOKButtonClick"
                Content="OK"
                FontFamily="Microsoft YaHei"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White"
                Visibility="Collapsed" />
        <!--
            以下是训练/练习阶段时的组件
        -->
        <Grid x:Name="PlayGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="CountdownDisplay"
                       Margin="0,0,0,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="40"
                       RenderTransformOrigin="-1.45,0.497"
                       Visibility="Collapsed" />
            <!--  需求变更，倒计时隐藏  -->
            <Border Grid.Row="1"
                    Panel.ZIndex="10"
                    BorderBrush="#c2c3c8"
                    BorderThickness="0,15,0,15">
                <Canvas x:Name="WordArea" Grid.Row="1" />
            </Border>
            <Rectangle x:Name="TargetArea"
                       Grid.Row="1"
                       Canvas.Left="1050"
                       Canvas.Top="-13"
                       Width="330"
                       Height="290"
                       Margin="920,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Panel.ZIndex="20"
                       Fill="Transparent"
                       Stroke="Black"
                       StrokeThickness="15" />
            <!--  把rectangle放到border外面来是为了保持它在border上层显示  -->

            <!--  Button Focusable="False" Background="#F89F00" Foreground="White" Content="结束" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Bottom" Height="67" Width="241"  FontSize="26"  Click="EndClick" Margin="0,0,309,55"/  -->
            <Button x:Name="StartButton"
                    Grid.Row="2"
                    Width="241"
                    Height="67"
                    Margin="0,0,0,55"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="#F89F00"
                    Click="StartClick"
                    Content="开始"
                    Focusable="False"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <!--  图片控件，用于显示反馈  -->
            <Image x:Name="CorrectImage"
                   Grid.Row="0"
                   Width="300"
                   Height="200"
                   Margin="512,50,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Visibility="Collapsed" />
            <Image Name="ErrorImage"
                   Grid.Row="0"
                   Width="300"
                   Height="200"
                   Margin="512,50,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Visibility="Collapsed" />
            <!--  文字控件，用于显示反馈  -->
            <TextBlock Name="CorrectTextBlock"
                       Grid.Row="2"
                       Width="150"
                       Height="150"
                       Margin="0,50,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontFamily="Microsoft YaHei"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="Green"
                       Text="正确!"
                       TextAlignment="Center"
                       Visibility="Collapsed" />
            <TextBlock Name="ErrorTextBlock"
                       Grid.Row="2"
                       Width="150"
                       Height="150"
                       Margin="0,50,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontFamily="Microsoft YaHei"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="Red"
                       Text="错误!"
                       TextAlignment="Center"
                       Visibility="Collapsed" />
        </Grid>
    </Grid>
</local:BaseUserControl>
