<local:BaseUserControl
    x:Class="crs.game.Games.Detail memory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1340"
    Height="920"
    Background="#0000"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid x:Name="StoryPanel" Grid.Row="0">
                <Border
                    Margin="150,30,150,10"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <TextBlock
                        x:Name="StoryTextBox"
                        Width="900"
                        Height="600"
                        Margin="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="28"
                        Text=""
                        TextWrapping="Wrap" />
                </Border>
            </Grid>
            <Grid
                x:Name="QuestionPanel1"
                Grid.Row="0"
                Visibility="Collapsed">
                <Border
                    Margin="150,30,150,10"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="5*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="QuestionTextBox1"
                            Width="900"
                            Height="200"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Text=""
                            TextWrapping="Wrap" />
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    x:Name="OptionABorder"
                                    Grid.Column="0"
                                    Width="380"
                                    Height="100"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="5">
                                    <Button
                                        x:Name="OptionA"
                                        Grid.Column="0"
                                        Width="350"
                                        Height="80"
                                        Background="Transparent"
                                        BorderBrush="Black"
                                        BorderThickness="2"
                                        Click="OptionA_Click"
                                        Cursor="Hand"
                                        FontSize="28" />
                                </Border>

                                <Border
                                    x:Name="OptionBBorder"
                                    Grid.Column="1"
                                    Width="380"
                                    Height="100"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="5">
                                    <Button
                                        x:Name="OptionB"
                                        Grid.Column="1"
                                        Width="350"
                                        Height="80"
                                        Background="Transparent"
                                        BorderBrush="Black"
                                        BorderThickness="2"
                                        Click="OptionB_Click"
                                        Cursor="Hand"
                                        FontSize="28" />
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    x:Name="OptionCBorder"
                                    Grid.Column="0"
                                    Width="380"
                                    Height="100"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="5">
                                    <Button
                                        x:Name="OptionC"
                                        Grid.Column="0"
                                        Width="350"
                                        Height="80"
                                        Background="Transparent"
                                        BorderBrush="Black"
                                        BorderThickness="2"
                                        Click="OptionC_Click"
                                        Cursor="Hand"
                                        FontSize="28" />
                                </Border>

                                <Border
                                    x:Name="OptionDBorder"
                                    Grid.Column="1"
                                    Width="380"
                                    Height="100"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="5">
                                    <Button
                                        x:Name="OptionD"
                                        Grid.Column="1"
                                        Width="350"
                                        Height="80"
                                        Background="Transparent"
                                        BorderBrush="Black"
                                        BorderThickness="2"
                                        Click="OptionD_Click"
                                        Cursor="Hand"
                                        FontSize="28" />
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            <Grid
                x:Name="QuestionPanel2"
                Grid.Row="0"
                Visibility="Visible">
                <Border
                    Margin="150,30,150,10"
                    BorderBrush="Black"
                    BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="5*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="QuestionTextBox2"
                            Width="900"
                            Height="200"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Text=""
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="inputTextBox"
                            Grid.Row="1"
                            Width="900"
                            Height="60"
                            Margin="10"
                            BorderBrush="Orange"
                            BorderThickness="2"
                            CaretBrush="Black"
                            FontSize="28"
                            Foreground="Black"
                            Text="" />

                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <Button
                    x:Name="OKButton"
                    Width="241"
                    Height="67"
                    Background="#FFF89F00"
                    Click="OKButtonClick"
                    Content="OK"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            </Grid>

        </Grid>


        <MediaElement
            x:Name="audioPlayer"
            LoadedBehavior="Manual"
            UnloadedBehavior="Stop" />
        <!--  Image controls for displaying feedback  -->
        <Image
            x:Name="CorrectImage"
            Width="300"
            Height="200"
            Margin="0,60,150,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Visibility="Collapsed" />
        <Image
            Name="ErrorImage"
            Width="300"
            Height="200"
            Margin="0,60,150,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Visibility="Collapsed" />

    </Grid>
</local:BaseUserControl>

