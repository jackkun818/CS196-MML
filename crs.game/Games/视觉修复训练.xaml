<local:BaseUserControl x:Class="crs.game.Games.视觉修复训练"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:crs.game"
                       Width="1340"
                       Height="920"
                       Background="Black">
    <Grid>
        <Grid x:Name="TrainGrid" Visibility="Collapsed">
            <Ellipse x:Name="FocusPoint"
                     Width="40"
                     Height="40"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Fill="Green" />
        </Grid>
        <Grid x:Name="TipGrid" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Black">
                <TextBlock Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="请注视屏幕中央的固定点!"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="每次固定点变化时请按OK键！"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="或出现光刺激时，请按OK键!"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Margin="0,0,0,40"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="请把您的目光一直注意在固定点上!"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <Button Width="100"
                        Height="50"
                        Background="Black"
                        BorderBrush="White"
                        Click="Button_Click_Continue"
                        Content="继续"
                        FontSize="20"
                        Foreground="White" />
            </StackPanel>
        </Grid>
        <Grid x:Name="RestGrid"
              Background="Transparent"
              Visibility="Collapsed">
            <Label x:Name="RestLabel"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="休息 10 秒"
                   FontSize="48"
                   Foreground="White" />
            <Image x:Name="RestImage"
                   Stretch="Uniform"
                   Visibility="Hidden" />
        </Grid>
        <!--  图片控件，用于显示反馈  -->
        <Image x:Name="CorrectImage"
               Grid.Row="1"
               Grid.Column="2"
               Width="300"
               Height="200"
               VerticalAlignment="Bottom"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="1"
               Grid.Column="2"
               Width="300"
               Height="200"
               VerticalAlignment="Bottom"
               Visibility="Collapsed" />

    </Grid>
</local:BaseUserControl>
