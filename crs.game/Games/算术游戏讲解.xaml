<local:BaseUserControl x:Class="crs.game.Games.算术游戏讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1750"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.7*" />
            <!--  创建三行，用来放文字、图片、按钮  -->
        </Grid.RowDefinitions>
        <Grid x:Name="TextGrid" Grid.Row="0">
            <TextBlock x:Name="GuideTextBlock"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                            Margin="50,0,0,0"
                       Text="现在将进行算术游戏的讲解，请用鼠标点击下一步进入讲解。"
                       TextWrapping="Wrap" />
        </Grid>
        <Grid x:Name="PicGrid" Grid.Row="1">
            <Image x:Name="GameCover"
                   Source="./pic/算术游戏讲解/GameCover.png"
                   Visibility="Collapsed" />
            <Image x:Name="GameBody"
                   Source="./pic/算术游戏讲解/GameBody.png"
                   Visibility="Collapsed" />
            <Image x:Name="GameError"
                   Source="./pic/算术游戏讲解/GameError.png"
                   Visibility="Collapsed" />
        </Grid>
        <!--  这里弄个Grid是用来讲解  -->
        <UniformGrid Name="ExplainButtonsGrid"
                     Grid.Row="2"
                     Columns="2">
            <Button x:Name="LastStep"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="LastStep_Click"
                    Content="上一步"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Collapsed" />
            <Button x:Name="NextStep"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="NextStep_Click"
                    Content="下一步"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <Button x:Name="Skip"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="Skip_Click"
                    Content="跳过"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
        </UniformGrid>
    </Grid>

</local:BaseUserControl>

