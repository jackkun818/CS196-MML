<local:BaseUserControl x:Class="crs.game.Games.Response_ability_explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.6*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.4*" />
            </Grid.RowDefinitions>
            <Button x:Name="OkButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    FontSize="40"
                    Foreground="White"
                    Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="        Enter training    " />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="▶" />
                </StackPanel>
            </Button>
            <TextBlock x:Name="TipBlock"
                       Grid.Row="0"
                       Grid.Column="0"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Focusable="False"
                       FontSize="24"
                       TextWrapping="Wrap" />
            <StackPanel x:Name="fuhao"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Focusable="False"
                        Orientation="Horizontal">
                <Image x:Name="TargetImage"
                       Width="Auto"
                       Height="240"
                       Focusable="False" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Focusable="False"
                           FontSize="100"
                           Text="= →" />
            </StackPanel>
            <Image x:Name="RandomImage"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Width="Auto"
                   Height="240"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Focusable="False" />
            <TextBlock x:Name="TipBlock1"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="0,90,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Focusable="False"
                       FontSize="40"
                       Text="Please press the corresponding button" />
        </Grid>
        <Grid Focusable="True" KeyDown="Window_KeyDown">
            <!--  otherUIelement  -->
        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="None"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="None"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="None"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see that there are 4 logos on the interface, please remember the corresponding keys for each logo."
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Width="380"
                       Height="590"
                       Margin="470,190,470,210"
                       Cursor=""
                       Source="./pic/REA1/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="After the logo appears, press the corresponding button"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="450,180,740,250"
                       Cursor=""
                       Source="./pic/REA1/2.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <Image x:Name="Image_3"
                       Margin="850,300,80,350"
                       Cursor=""
                       Source="./pic/REA1/3.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
            </Grid>
        </Viewbox>
        <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Grid.Row="0"
                   Grid.Column="2"
                   Canvas.Left="650"
                   Canvas.Top="799"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Hidden" />
        </Canvas>
    </Grid>
</local:BaseUserControl>

