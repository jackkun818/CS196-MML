<local:BaseUserControl x:Class="crs.game.Games.警惕训练"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="483*" />
            <RowDefinition Height="370*" />
            <RowDefinition Height="227*" />
            <!--  这个比例是看蓝湖设计稿确定的  -->
        </Grid.RowDefinitions>
        <!--  上方所引用的物体区域  -->
        <Grid x:Name="ReferenceBeltGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Width="604.32"
                    Height="241.18"
                    Panel.ZIndex="10"
                    BorderBrush="#c2c3c8"
                    BorderThickness="15,15,15,15">
                <UniformGrid x:Name="ReferenceItemGrid">
                    <!--  用来存放引用的物品图片  -->
                </UniformGrid>
            </Border>

            <Grid x:Name="FeedBackGrid" Grid.Column="1">
                <!--  存放一些反馈组件  -->
                <Image x:Name="CorrectImage"
                       Width="300"
                       Height="200"
                       Visibility="Collapsed" />
                <Image Name="ErrorImage"
                       Width="300"
                       Height="200"
                       Visibility="Collapsed" />
            </Grid>
        </Grid>
        <!--  传送带区域的组件  -->
        <Grid x:Name="ConveyBeltGrid" Grid.Row="1">
            <Border Panel.ZIndex="10"
                    BorderBrush="#c2c3c8"
                    BorderThickness="0,15,0,15">
                <Canvas x:Name="ConveyArea" />

                <!--  用来给那些图片运动的地方  -->
            </Border>
            <Rectangle x:Name="TargetRect"
                       Canvas.Left="850"
                       Canvas.Top="0"
                       Margin="850,0,144,0"
                       Panel.ZIndex="20"
                       Fill="Transparent"
                       Stroke="Black"
                       StrokeThickness="15" />
        </Grid>
        <!--  下方的一些提示语  -->
        <Grid x:Name="TipsGrid" Grid.Row="2">
            <TextBlock Width="926"
                       Height="115"
                       Margin="0,36,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="48"
                       FontWeight="Bold"
                       Text="当您看到与上方物品有差异的图片移动到方框中时，请按下OK键！"
                       TextWrapping="Wrap" />
        </Grid>
    </Grid>
</local:BaseUserControl>

