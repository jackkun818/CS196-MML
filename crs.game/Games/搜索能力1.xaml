<local:BaseUserControl x:Class="crs.game.Games.搜索能力1"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid x:Name="PageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Transparent" />
        <Grid x:Name="MainGrid" Grid.Column="0">

            <!--  初始隐藏  -->
        </Grid>
        <Grid Name="OverLayGrid" Grid.Column="1">
            <!--  用来定时覆盖掉MainGrid2，使得这些组件在倒计时中无法使用  -->
            <Grid x:Name="MainGrid2" Grid.Column="1">
                <Border x:Name="textBlock"
                        Width="220"
                        Height="73"
                        Margin="0,206,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="2">
                    <!--  初始隐藏  -->
                    <TextBlock x:Name="displayTextBlock"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="60"
                               Foreground="Black" />
                </Border>
                <Canvas x:Name="myCanvas"
                        Margin="0,271,0,0"
                        VerticalAlignment="Top"
                        Background="Transparent">
                    <Button Canvas.Left="20"
                            Canvas.Top="20"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="1"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="20"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="2"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="20"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="3"
                            FontSize="24"
                            Foreground="White" />

                    <!--  Row 2  -->
                    <Button Canvas.Left="20"
                            Canvas.Top="100"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="4"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="100"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="5"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="100"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="6"
                            FontSize="24"
                            Foreground="White" />

                    <!--  Row 3  -->
                    <Button Canvas.Left="20"
                            Canvas.Top="180"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="7"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="180"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="8"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="180"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="9"
                            FontSize="24"
                            Foreground="White" />

                    <!--  Row 4  -->
                    <Button Canvas.Left="20"
                            Canvas.Top="260"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnBackButtonClick"
                            Content="←"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="260"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="0"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="260"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnSubmitButtonClick"
                            Content="✔"
                            FontSize="24"
                            Foreground="White" />
                </Canvas>
            </Grid>
        </Grid>

        <!--  图片控件，用于显示反馈  -->
        <Image x:Name="CorrectImage"
               Grid.Row="1"
               Grid.Column="1"
               Width="300"
               Height="200"
               VerticalAlignment="Top"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="1"
               Grid.Column="1"
               Width="300"
               Height="200"
               VerticalAlignment="Top"
               Visibility="Collapsed" />
        <Canvas x:Name="CursorCanvas"
                Panel.ZIndex="9999"
                IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Visible" />
        </Canvas>
    </Grid>

</local:BaseUserControl>

