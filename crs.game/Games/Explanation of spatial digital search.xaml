<local:BaseUserControl x:Class="crs.game.Games.Explanation_of_spatial_digital_search"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="1200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="480" />
                <RowDefinition Height="300" />
            </Grid.RowDefinitions>
            <UniformGrid Name="NumberGrid"
                         Grid.Row="1"
                         Grid.RowSpan="2"
                         Grid.Column="1"
                         Margin="0,74,0,226"
                         Columns="5"
                         Rows="5" />
            <Button x:Name="OkButton"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="241"
                    Height="67"
                    Margin="949,110,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="       Enter training    " />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="▶" />
                </StackPanel>
            </Button>
            <TextBlock x:Name="tipblock"
                       Grid.Row="2"
                       Grid.Column="1"
                       Margin="520,134,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="42"
                       Text="" />
            <Image x:Name="FeedbackImage"
                   Grid.RowSpan="2"
                   Grid.Column="1"
                   Width="150"
                   Height="150"
                   Margin="530,100,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <TextBlock x:Name="TipBlock1"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="40"
                       TextWrapping="Wrap" />
            <TextBlock x:Name="TipBlock2"
                       Grid.ColumnSpan="2"
                       Width="1206"
                       Margin="64,30,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="40"
                       Foreground="Black"
                       Text="Your task is to click these numbers one after another in order of numbers to improve the speed, the faster the better the！"
                       TextWrapping="Wrap" />
            <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
                <Image x:Name="CustomCursor"
                       Grid.Row="0"
                       Grid.Column="2"
                       Canvas.Left="650"
                       Canvas.Top="799"
                       Width="50"
                       Height="50"
                       Source="./guangbiao.png"
                       Visibility="Hidden" />
            </Canvas>
        </Grid>


        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="150,50,158,818"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you see the numbers in the order, please use the mouse to click the numbers in the order"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="48,189,48,159"
                       RenderTransformOrigin="0.5,0.5"
                       Source="./pic/NUQU/1.png"
                       Stretch="Fill">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform AngleY="0.173" />
                            <RotateTransform />
                            <TranslateTransform Y="1.636" />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>