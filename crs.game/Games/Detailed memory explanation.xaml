<local:BaseUserControl x:Class="crs.game.Games.Detailed_memory_explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>

        <Grid x:Name="ALL_Canvs" Visibility="Hidden">
            <Canvas Name="canvasStory"
                    Width="1200"
                    Height="800" />
            <Canvas Name="canvasQuestion1"
                    Width="1200"
                    Height="800" />
            <Canvas Name="canvasQuestion2"
                    Width="1200"
                    Height="800" />


            <MediaElement x:Name="audioPlayer"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop" />
            <TextBlock x:Name="Text_Result"
                       Width="500"
                       Margin="0,50,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       Text="Correct answer"
                       TextWrapping="Wrap"
                       Visibility="Hidden" />
            <Button x:Name="end"
                    Width="241"
                    Height="67"
                    Margin="0,0,180,65"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    Content="Enter the test"
                    Cursor="Hand"
                    FontSize="40"
                    Foreground="White"
                    Visibility="Hidden">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <TextBlock x:Name="Text_1"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see a little story on the screen, please remember the details of this little story."
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="150,150,150,150"

                       Visibility="Visible" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see a question about the short story and four options on the screen. Please select the correct selection and pressOKkey."
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="150,150,150,150"

                       Visibility="Hidden" />

                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>

    </Grid>
</local:BaseUserControl>
