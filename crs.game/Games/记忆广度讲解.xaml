<local:BaseUserControl x:Class="crs.game.Games.记忆广度讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="3*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid x:Name="GameGrid"
                  Grid.Row="1"
                  Grid.Column="1"
                  ShowGridLines="False">
                <!--  LJN,把ShowGridLines变false了  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
            <Button x:Name="OkButton"
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Width="241"
                    Height="67"
                    Margin="965,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="        进入训练    " />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="▶" />
                </StackPanel>
            </Button>
            <TextBlock x:Name="StatusTextBlock"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="40"
                       TextWrapping="Wrap" />
            <TextBlock x:Name="StatusTextBlock1"
                       Grid.Row="2"
                       Grid.Column="1"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="40"
                       TextWrapping="Wrap" />
            <!--  LJN,图片控件，用于显示反馈  -->
            <Image x:Name="CorrectImage"
                   Grid.Row="0"
                   Grid.Column="1"
                   Width="184"
                   Height="184"
                   Margin="444,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Panel.ZIndex="9" />
            <Image Name="ErrorImage"
                   Grid.Row="0"
                   Grid.Column="1"
                   Width="184"
                   Height="184"
                   Margin="444,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Panel.ZIndex="9" />
            <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
                <Image x:Name="CustomCursor"
                       Grid.Row="0"
                       Grid.Column="2"
                       Canvas.Left="650"
                       Canvas.Top="799"
                       Width="50"
                       Height="50"
                       Source="./guangbiao.png"
                       Visibility="Hidden" />
            </Canvas>
        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="上一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="下一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="跳过"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="200,50,158,850"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="现在您看到5×5的方块"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="180,160,180,370"
                       Cursor=""
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Margin="200,50,158,850"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="接着会按照顺序显示方块，请您进行记忆"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="180,85,180,294"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_3"
                           Margin="200,50,158,850"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="在方块隐藏后，请您按顺序依次点击5×5方块"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_3"
                       Margin="180,160,180,370"
                       Stretch="Fill"
                       Visibility="Hidden" />

            </Grid>
        </Viewbox>


    </Grid>

</local:BaseUserControl>
