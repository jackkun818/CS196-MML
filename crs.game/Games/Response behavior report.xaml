<Window x:Class="crs.game.Games.Response behavior report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:crs.game.Games"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="REVE_report"
        Width="800"
        Height="450"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!--  Title bar  -->
        <StackPanel Margin="10" Orientation="Vertical">
            <Border Padding="2"
                    Background="LightGray"
                    BorderBrush="Black"
                    BorderThickness="1">
                <TextBlock>
                    <Run FontSize="20"
                         FontWeight="Bold"
                         Text="patientID" />
                    <Run FontSize="10"
                         FontWeight="Bold"
                         Text="Born in" />
                </TextBlock>
            </Border>

            <Border Padding="2"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="Date"
                               Margin="2"
                               FontSize="20"
                               FontWeight="Bold" />
                </StackPanel>
            </Border>
        </StackPanel>

        <DataGrid x:Name="dataGrid"
                  Grid.Row="2"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="All">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="0,1,1,1" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Hardness}"
                                    Header="Difficulty" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding CorrectAnswers}"
                                    Header="Number of times the answer is correct" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding WrongAnswers}"
                                    Header="Number of times the answer was wrong" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Accuracy, StringFormat={}{0:P0}}"
                                    Header="Correct rate" />
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="Parameter"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="All"
                  HeadersVisibility="None">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="0,1,1,1" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Name}"
                                    Header="Parameter name" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Value}"
                                    Header="Parameter value" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
