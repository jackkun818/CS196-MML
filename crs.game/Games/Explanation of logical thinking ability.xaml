<local:BaseUserControl x:Class="crs.game.Games.Explanation_of_logical_thinking_ability"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="2*" />

                <RowDefinition />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="textblock"
                       Grid.Row="0"
                       Height="auto"
                       FontSize="40"
                       Text="Please select the next item you think is most in line with the rules"
                       TextWrapping="Wrap" />
            <WrapPanel x:Name="ImagePanel"
                       Grid.Row="1"
                       Margin="10"
                       HorizontalAlignment="Stretch"
                       Orientation="Horizontal" />
            <WrapPanel x:Name="ButtonPanel"
                       Grid.Row="2"
                       Margin="10,-150,0,0"
                       Orientation="Horizontal" />

            <!--  Button x:Name="OkButton" Margin="1005,118,0,0" Grid.Row="2" Content="Enter training" Height="80" Width="160" FontSize="35" VerticalAlignment="Top" HorizontalAlignment="Left"  Visibility="Hidden" Click="OkButton_Click" Grid.RowSpan="2"/  -->
            <Border />
        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">

                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>

                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <!--  Loading images using absolute path  -->
                <TextBlock x:Name="Text_1"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see that there is a sequence of images above the screen, and there is some connection between the images. You need to discover the rules by thinking and find a correct picture to perfect the picture sequence"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="130,315,130,560"
                       Source="./pic/LODE/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="There are three images at the bottom of the screen. Please find the photos that match the rules. Click and pressOKKey confirmation"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Width="970"
                       Height="265"
                       Margin="174,256,174,466"
                       Source="./pic/LODE/2.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <Button x:Name="Button4"
                        Width="241"
                        Height="67"
                        Margin="329,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Confirm_Button_Click"
                        Content="OK"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="OkButton"
                        Width="241"
                        Height="67"
                        Margin="1100,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="OkButton_Click"
                        Content="Enter training"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Hidden" />
                <Border />
            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>