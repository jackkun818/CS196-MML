<local:BaseUserControl
    x:Class="crs.game.Games.注意力分配讲解"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1340"
    Height="920"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>

        <Grid x:Name="ALL_Canvs" Visibility="Hidden">
            <local:Win32WindowHost
                x:Name="Panel2"
                Width="1340"
                Height="920"
                Margin="0,3,96,131" />
            <Border
                x:Name="Panel1"
                Width="591"
                Height="460"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Black"
                BorderThickness="1"
                Visibility="Hidden" />


            <TextBlock
                x:Name="Text_Result"
                Width="500"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="40"
                Text="回答正确"
                TextWrapping="Wrap"
                Visibility="Hidden" />

        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <TextBlock
                    x:Name="Text_1"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="现在您可以看到屏幕上的画面，您需要控制火车的速度，使仪表盘中的速度指针保持在绿色区间内。"
                    TextWrapping="Wrap" />
                <Image
                    x:Name="Image_1"
                    Margin="0,150,0,150"
                    Stretch="Fill"
                    Visibility="Visible" />
                <TextBlock
                    x:Name="Text_2"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="当仪表盘中的黄色信号灯亮起时，请按下F键。"
                    TextWrapping="Wrap"
                    Visibility="Hidden" />
                <Image
                    x:Name="Image_2"
                    Margin="0,150,0,150"
                    Stretch="Fill"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="Text_3"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="当仪表盘中的红色刹车信号灯亮起时，请按下空格键刹车。"
                    TextWrapping="Wrap" />
                <Image
                    x:Name="Image_3"
                    Margin="0,150,0,150"
                    Stretch="Fill"
                    Visibility="Visible" />
                <TextBlock
                    x:Name="Text_4"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="40"
                    Text="当画面中出现红绿灯时，请注意不能在红灯时通过。"
                    TextWrapping="Wrap"
                    Visibility="Hidden" />
                <Image
                    x:Name="Image_4"
                    Margin="0,150,0,150"
                    Stretch="Fill"
                    Visibility="Hidden" />

                <Button
                    x:Name="Button_1"
                    Width="241"
                    Height="67"
                    Margin="189,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_1_Click"
                    Content="上一步"
                    Cursor="Hand"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Button_2"
                    Width="241"
                    Height="67"
                    Margin="550,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_2_Click"
                    Content="下一步"
                    Cursor="Hand"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Button_3"
                    Width="241"
                    Height="67"
                    Margin="911,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_3_Click"
                    Content="跳过"
                    Cursor="Hand"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="end"
                    Width="241"
                    Height="67"
                    Margin="0,0,180,65"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    Content="进入测试"
                    Cursor="Hand"
                    FontSize="40"
                    Foreground="White"
                    Visibility="Hidden">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>

    </Grid>
</local:BaseUserControl>
