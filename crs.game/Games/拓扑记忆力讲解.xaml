<local:BaseUserControl x:Class="crs.game.Games.拓扑记忆力讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid x:Name="grid" Visibility="Hidden">
            <!--  主界面布局  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>

            <!--  参数设置  -->

            <!--  图案显示区域  -->
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  左侧：记忆阶段的图案显示区域  -->
                <UniformGrid Name="PatternGrid"
                             FocusManager.IsFocusScope="True"
                             Grid.Column="0"
                             Margin="0,0,-600,0"
                             Columns="4"
                             RenderTransformOrigin="0.5,0.5"
                             Rows="4">
                    <UniformGrid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-0.005" />
                            <TranslateTransform />
                        </TransformGroup>
                    </UniformGrid.RenderTransform>
                    <!--  图案按钮将由代码动态生成  -->
                </UniformGrid>

                <!--  右侧：回忆阶段显示单独的图案  -->
                <StackPanel Grid.ColumnSpan="2"
                            Height="550"
                            Margin="1172,100,0,0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <Image Name="RecallButton"
                           Width="150"
                           Height="150"
                           Margin="10,10,0,0"
                           IsEnabled="False"
                           Visibility="Visible" />

                    <Border Height="300" BorderThickness="1">
                        <TextBlock x:Name="TipsTextBlock"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   Text=""
                                   TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Grid>

            <!--  底部：开始和重置按钮  -->
            <StackPanel Grid.Row="1"
                        Width="364"
                        Height="70"
                        Margin="0,603,0,52"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        RenderTransformOrigin="0.513,-0.116">


            </StackPanel>
        </Grid>


        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="ReadyButton"
                        IsDefault="True"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="OnReadyButtonClick"
                        Content="OK"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed"/>
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="上一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="下一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="跳过"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="0,734,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="45"
                           Text="现在可以看到界面上有三个图形，记住后请按OK键"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Width="900"
                       Height="300"
                       Margin="0,0,0,400"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="0,710,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="45"
                           Text="现在三个图形已经被覆盖，请你在短时间内找出与屏幕右侧目标图形所在位置，通过键盘上的左右键选择然后点击OK"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Width="900"
                       Height="300"
                       Margin="0,0,0,400"
                       Stretch="Fill"
                       Visibility="Hidden" />
                </Grid>
        </Viewbox>
        <Image Name ="CorrectImage" Margin="1155,-78,10,822" Grid.Row="0" Grid.Column="0" Source="/Resources/词语记忆力/Effects/Correct.png" Width="175" Height="175" Visibility="Hidden"/>
        <Image Name ="WrongImage" Margin="1155,-78,10,822" Grid.Row="0" Grid.Column="0" Source="/Resources/词语记忆力/Effects/Error.png"  Width="175" Height="175" Visibility="Hidden"/>

    </Grid>
</local:BaseUserControl>
