<local:BaseUserControl x:Class="crs.game.Games.Beware of training explanations"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <!--  Components during trial play  -->
        <Grid x:Name="PlayGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="483*" />
                <RowDefinition Height="370*" />
                <RowDefinition Height="227*" />
                <!--  This ratio is determined by the Blue Lake design draft  -->
            </Grid.RowDefinitions>
            <!--  The object area referenced above  -->
            <Grid x:Name="ReferenceBeltGrid" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Width="604.32"
                        Height="241.18"
                        Panel.ZIndex="10"
                        BorderBrush="#c2c3c8"
                        BorderThickness="15,15,15,15">
                    <UniformGrid x:Name="ReferenceItemGrid">
                        <!--  Used to store cited items  -->
                    </UniformGrid>
                </Border>

                <Grid x:Name="FeedBackGrid" Grid.Column="1">
                    <!--  Store some feedback components  -->
                    <Image x:Name="CorrectImage"
                           Width="300"
                           Height="200"
                           Visibility="Collapsed" />
                    <Image Name="ErrorImage"
                           Width="300"
                           Height="200"
                           Visibility="Collapsed" />
                </Grid>
            </Grid>
            <!--  Components of conveyor belt area  -->
            <Grid x:Name="ConveyBeltGrid" Grid.Row="1">
                <Border Panel.ZIndex="10"
                        BorderBrush="#c2c3c8"
                        BorderThickness="0,15,0,15">
                    <Canvas x:Name="ConveyArea" />

                    <!--  Used to give those pictures to exercise  -->
                </Border>
                <Rectangle x:Name="TargetRect"
                           Canvas.Left="850"
                           Canvas.Top="0"
                           Margin="850,0,144,0"
                           Panel.ZIndex="20"
                           Fill="Transparent"
                           Stroke="Black"
                           StrokeThickness="15" />
            </Grid>
            <!--  Some tips below  -->
            <Grid x:Name="TipsGrid" Grid.Row="2">
                <TextBlock x:Name="TipTextBlock"
                           Width="926"
                           Height="115"
                           Margin="0,36,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="48"
                           FontWeight="Bold"
                           Text="When you see an image that is different from the above item moves into the box, pressOKkey！"
                           TextWrapping="Wrap" />
                <!--  This button is finished and you will start the main game.  -->
                <Button x:Name="StartTheGameButton"
                        Width="241"
                        Height="67"
                        Margin="550,96,550,30"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="#F89F00"
                        Click="Skip_Click"
                        Content="Enter training"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed" />
            </Grid>
        </Grid>
        <!--  Components during explanation  -->
        <Grid x:Name="ExplainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Used above Text prompt  -->
            <Grid x:Name="TextExplainGrid" Grid.Row="0">
                <TextBlock x:Name="TextExplain"
                        FontFamily="Microsoft YaHei"
                        FontSize="45"
                                                  HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                           Text="Now, this module will be explained to you. Please click the button below to enter the explanation"
                           TextWrapping="Wrap" />
            </Grid>
            <!--  Used in the middle, display the picture  -->
            <Grid x:Name="PicExplainGrid" Grid.Row="1">
                <Image x:Name="PicExplain" Source="./VIG/explain/Part1.png" />
            </Grid>
            <!--  Used below, put button to indicate  -->
            <UniformGrid x:Name="ButtonExplainGrid"
                         Grid.Row="2"
                         Margin="0,0,0,10">
                <Button x:Name="LastStep"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="LastStep_Click"
                        Content="Previous"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed" />
                <Button x:Name="NextStep"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="NextStep_Click"
                        Content="Next step"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="Try"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="#F89F00"
                        Click="Try_Click"
                        Content="Trial"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed" />
                <Button x:Name="Skip"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="Skip_Click"
                        Content="jump over"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </UniformGrid>
        </Grid>
    </Grid>
</local:BaseUserControl>

