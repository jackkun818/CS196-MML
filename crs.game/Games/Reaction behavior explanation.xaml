<local:BaseUserControl
    x:Class="crs.game.Games.Reaction_behavior_explanation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:crs.game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1340"
    Height="920"
    Background="#0000"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button
                x:Name="OkButton"
                Grid.Row="1"
                Grid.Column="1"
                Width="241"
                Height="67"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FFF89F00"
                Click="OkButton_Click"
                FontSize="40"
                Foreground="White"
                Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Text="       Enter training    " />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="40"
                        Text="▶" />
                </StackPanel>
            </Button>
            <TextBlock
                x:Name="TipBlock"
                Grid.Row="0"
                Grid.Column="0"
                Margin="-200"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="24"
                TextWrapping="Wrap" />
            <StackPanel
                Grid.RowSpan="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image x:Name="TargetImage" Height="240" />
                <TextBlock
                    x:Name="fuhaotext"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="100"
                    Text="= →" />
            </StackPanel>
            <Image
                x:Name="RandomImage"
                Grid.RowSpan="2"
                Grid.Column="0"
                Height="240"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                x:Name="KeyPromptText"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,240,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="40"
                Text="Please press the corresponding button" />
        </Grid>


        <Grid Width="1340" Height="990">


            <TextBlock
                x:Name="Text_1"
                Margin="0,55,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="40"
                Text="Now you can see that there are two logos on the interface. Please remember the corresponding keys for each logo."
                TextWrapping="Wrap" />
            <Image
                x:Name="Image_1"
                Margin="51,297,52,452"
                Cursor=""
                Source="./pic/REVE/1.png"
                Stretch="Fill" />
            <TextBlock
                x:Name="Text_2"
                Margin="0,55,0,0"
                HorizontalAlignment="Center"
                FontSize="45"
                Text="After the logo appears, press the corresponding button"
                TextWrapping="Wrap"
                Visibility="Collapsed" />
            <Image
                x:Name="Image_2"
                Margin="356,100,691,250"
                Source="./pic/REVE/2.png"
                Stretch="Fill"
                Visibility="Collapsed" />
            <Image
                x:Name="Image_3"
                Margin="850,300,80,350"
                Source="./pic/REVE/3.png"
                Stretch="Fill"
                Visibility="Collapsed" />
        </Grid>
        <Viewbox>
            <Grid Width="1340" Height="990">
                <Button
                    x:Name="Button_1"
                    Width="241"
                    Height="67"
                    Margin="189,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_1_Click"
                    Content="Previous"
                    Cursor="None"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Button_2"
                    Width="241"
                    Height="67"
                    Margin="550,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_2_Click"
                    Content="Next step"
                    Cursor="None"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    x:Name="Button_3"
                    Width="241"
                    Height="67"
                    Margin="911,850,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_3_Click"
                    Content="jump over"
                    Cursor="None"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>
        <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
            <Image
x:Name="CustomCursor"
Grid.Row="0"
Grid.Column="2"
Canvas.Left="650"
Canvas.Top="799"
Width="50"
Height="50"
Source="./guangbiao.png"
Visibility="Hidden" />
        </Canvas>
    </Grid>
</local:BaseUserControl>
