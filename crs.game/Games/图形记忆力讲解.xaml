<local:BaseUserControl x:Class="crs.game.Games.图形记忆力讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="96*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*" />
                <RowDefinition Height="92*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>

            <!--  第一个界面内容  -->
            <Grid x:Name="Grid1"
                  Grid.Row="1"
                  Grid.Column="1"
                  Visibility="Collapsed">
                <Border Background="Transparent" />
                <Border Margin="16,34,16,158" BorderThickness="1">
                    <UniformGrid x:Name="imageContainer" Columns="3" />
                </Border>
                <Button x:Name="OK"
                        Width="240"
                        Height="66"
                        Margin="900,632,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#F89F00"
                        Click="ContinueButton_Click"
                        Content="OK"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </Grid>

            <!--  第二个界面内容  -->
            <Grid x:Name="Grid2"
                  Grid.Row="1"
                  Grid.Column="1"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="8*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#c2c3c8"
                        BorderThickness="0,20,0,20" />
                <Grid Grid.Row="0">
                    <Border x:Name="textBlock"
                            Width="322"
                            Height="65"
                            Margin="400,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Green"
                            BorderBrush="Black"
                            BorderThickness="2"
                            Visibility="Collapsed">
                        <TextBlock x:Name="textBlock1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="30"
                                   Foreground="Black"
                                   TextWrapping="Wrap" />
                    </Border>
                </Grid>
                <Grid x:Name="ImageGrid" Grid.Row="1">
                    <Border Grid.Column="0"
                            Margin="0,0,632,0"
                            BorderBrush="White"
                            BorderThickness="1">
                        <Canvas x:Name="imageContainer2" />
                    </Border>
                    <Rectangle x:Name="SelectionBox"
                               Grid.ColumnSpan="3"
                               Margin="747,0,173,0"
                               Panel.ZIndex="1"
                               Fill="Transparent"
                               Stroke="Black"
                               StrokeThickness="15"
                               Visibility="Visible" />
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="825*" />
                        <ColumnDefinition Width="222*" />
                        <ColumnDefinition Width="233*" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock x:Name="result_text"
                               Width="301"
                               Height="85"
                               Margin="518,-382,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="40"
                               TextWrapping="Wrap" />


                    <Button x:Name="AnswerOK"
                            Width="240"
                            Height="66"
                            Margin="900,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#F89F00"
                            Click="OkButton_Click"
                            Content="OK"
                            FontFamily="Microsoft YaHei"
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="White" />

                    <Button x:Name="end"
                            Width="207"
                            Height="64"
                            Margin="1012,158,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="White"
                            Click="end_Click"
                            Content="进入训练"
                            FontSize="40"
                            Visibility="Collapsed" />
                </Grid>
            </Grid>
        </Grid>


        <Viewbox>
            <Grid Width="1343" Height="990">
                <TextBlock x:Name="Text_1"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="现在你可以看到界面上有1个物体，请记住它"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="251,185,251,185"
                       Source="./pic/BILD/2.jpg"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="现在您会看到一排图片的文字从左往右穿过，当您看到与您记住的物体相匹配的图片经过方框时，请按下Enter键"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="-1,370,1,330"
                       Source="./pic/BILD/2.png"
                       Stretch="Fill"
                       Visibility="Collapsed" />
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="上一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="下一步"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="跳过"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

        </Viewbox>
    </Grid>
</local:BaseUserControl>
