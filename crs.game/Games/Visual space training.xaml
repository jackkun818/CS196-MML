<local:BaseUserControl x:Class="crs.game.Games.Visual_space_training"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />

            <RowDefinition />
            <RowDefinition Height="0.05*" />
        </Grid.RowDefinitions>
        <Image x:Name="judgement"
               Grid.Row="0"
               Grid.Column="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Visibility="Collapsed" />
        <Image x:Name="CorrectImage"
               Grid.Row="0"
               Grid.Column="1"
               Width="300"
               Height="200"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="0"
               Grid.Column="1"
               Width="300"
               Height="200"
               Visibility="Collapsed" />
        <TextBlock x:Name="textblock"
                   Grid.Row="2"
                   Grid.Column="1"
                   Height="auto"
                   FontSize="40"
                   Text=""
                   TextAlignment="Center"
                   TextWrapping="Wrap" />
        <Border Grid.Row="1" Grid.Column="1" />
        <Grid x:Name="ImageGrid"
              Grid.Row="1"
              Grid.Column="1"
              Margin="15,0,0,20">

            <Image x:Name="image" />

        </Grid>
        <!--  TextBlock Grid.Row="2" Name="CorrectTextBlock" Width="150" Height="150" Text="correct!" FontSize="40" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" TextAlignment="Center"/  -->
        <!--  TextBlock Grid.Row="2" Name="ErrorTextBlock" Width="150" Height="150" Text="mistake!" FontSize="40" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" TextAlignment="Center"/  -->
        <!--  TextBlock Text="Please press the left or right arrow according to the target at the reference point" Grid.Row="1" Height="auto" FontSize="25" Grid.Column="1"/  -->
    </Grid>
</local:BaseUserControl>

