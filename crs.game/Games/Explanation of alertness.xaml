<local:BaseUserControl x:Class="crs.game.Games.Explanation of alertness"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       Focusable="True"
                       KeyDown="Window_KeyDown"
                       Loaded="Explanation of alertness_Loaded"
                       mc:Ignorable="d">
    <Grid Cursor="">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            <Button x:Name="anjian"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="241"
                    Height="67"
                    Margin="34,180,34,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_Click"
                    Content="confirm"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <Image x:Name="RandomImage"
                   Width="240"
                   Height="240"
                   Margin="376,112,305,153"
                   Source="ALET1.png"
                   Stretch="Fill" />
            <Button x:Name="OkButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="241"
                    Height="67"
                    Margin="0,180,0,0"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="       Enter training    " />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="▶" />
                </StackPanel>
            </Button>
            <TextBlock x:Name="TipBlock"
                       Grid.Row="1"
                       Grid.Column="0"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       TextWrapping="Wrap" />
            <Image x:Name="TargetImage"
                   Grid.Row="0"
                   Grid.Column="1"
                   Width="240"
                   Height="240"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="ALET1.png"
                   Stretch="Fill" />
            <TextBlock x:Name="TipBlock1"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="0,0,0,50"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="30"
                       TextWrapping="Wrap" />
            <TextBlock x:Name="mubiaowu"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="0,469,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       Text="Target map"
                       TextWrapping="Wrap" />
        </Grid>


        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="JinggaoButton"
        Width="121"
        Height="68"
        Margin="468,163,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
       
        Click="JinggaoButton_Click"
        Cursor="Hand"
        FontFamily="Microsoft YaHei"
        FontSize="30"
        FontWeight="Bold"
        Background="Transparent">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                    <Image Source="./pic/ALET/jinggao.png" Width="121" Height="68"/>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="305,50,158,850"
                           FontSize="40"
                           Text="Now you can see the selected target map on the upper side that you need to confirm the selected target map"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_1"
                       Width="240"
                       Height="240"
                       Margin="521,250,521,437"
                       Source="./pic/ALET/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Width="1262"
                           Height="61"
                           Margin="114,50,0,850"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="When a target object with a warning sound or no warning sound appears on the screen, please click Confirm"
                           TextWrapping="Wrap" />
                <TextBlock x:Name="Text_3"
                           Width="236"
                           Margin="232,172,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="With warning sound"
                           TextWrapping="Wrap" />
                <TextBlock x:Name="Text_4"
                           Margin="911,172,202,0"
                           VerticalAlignment="Top"
                           FontSize="40"
                           RenderTransformOrigin="0.463,0.696"
                           Text="No warning sound"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_2"
                       Width="240"
                       Height="240"
                       Margin="850,250,191,437"
                       Source="./pic/ALET/1.png"
                       Stretch="Fill" />
                <Image x:Name="Image_3"
                       Width="240"
                       Height="240"
                       Margin="189,250,856,437"
                       Source="./pic/ALET/1.png"
                       Stretch="Fill" />
                <Image Name="CorrectOrNot"
                       Width="200"
                       Height="200"
                       Margin="500,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>

