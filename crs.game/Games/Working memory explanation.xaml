<local:BaseUserControl x:Class="crs.game.Games.Working_memory_explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="brownBorder"
                    Grid.Column="0"
                    Background="Transparent" />
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="155" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Border x:Name="blackrow1"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <UniformGrid x:Name="imageContainer"
                                     Margin="-1,0,0,0"
                                     Columns="9" />
                    </Border>
                    <TextBlock x:Name="suitTextBlock_model2"
                               Margin="192,74,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="48"
                               Foreground="Black"
                               Text="" />
                </Grid>
                <Grid Grid.Row="1">
                    <Border x:Name="blackrow2"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <UniformGrid x:Name="imageContainer2" Columns="9" />
                    </Border>
                </Grid>
                <Grid Grid.Row="2">
                    <Border x:Name="blackrow3"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <UniformGrid x:Name="imageContainer3" Columns="9" />
                    </Border>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="end"
                            Grid.Column="2"
                            Width="241"
                            Height="67"
                            Margin="0,0,180,0"
                            HorizontalAlignment="Right"
                            Background="#FFF89F00"
                            Click="end_Click"
                            Content="Enter the test"
                            Cursor="Hand"
                            FontSize="40"
                            Foreground="White"
                            Visibility="Hidden">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Border x:Name="textBlock"
                            Grid.Column="0"
                            Width="241"
                            Height="67"
                            Margin="130,0,90,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Green"
                            BorderBrush="Black"
                            BorderThickness="2" />
                    <Button x:Name="begin"
                            Grid.Column="1"
                            Width="241"
                            Height="67"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="#FFF89F00"
                            Click="beginButton_Click"
                            Content="start"
                            Cursor="Hand"
                            FontFamily="Microsoft YaHei"
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="confirm"
                            Grid.Column="2"
                            Width="241"
                            Height="67"
                            Margin="90,0,130,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="#FFF89F00"
                            Click="confirmButton_Click"
                            Content="confirm"
                            Cursor="Hand"
                            FontFamily="Microsoft YaHei"
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Button.Resources>
                    </Button>

                </Grid>
            </Grid>
            <Grid Grid.Column="1">


                <TextBlock x:Name="TimeTextBlock"
                           Width="164"
                           Height="73"
                           Margin="0,31,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="54"
                           Foreground="Black"
                           Text="0:0"
                           Visibility="Collapsed" />

                <TextBlock x:Name="levelTextBlock"
                           Width="196"
                           Height="94"
                           Margin="0,97,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="54"
                           Foreground="Black"
                           Text=""
                           Visibility="Collapsed" />

                <TextBlock x:Name="modeTextBlock"
                           Width="196"
                           Height="157"
                           Margin="0,141,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="32"
                           Foreground="Black"
                           Text=""
                           TextWrapping="Wrap" />


            </Grid>
        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <TextBlock x:Name="Text_1"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see two playing cards on the screen. Please remember them and click the OK key"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="20,150,400,200"
                       Source="./pic/WOME/1.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now please click and select the two you just saw from these four playing cards, and then press the confirmation key"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="20,150,400,200"
                       Source="./pic/WOME/2.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_3"
                           Width="1261"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see that there are three playing cards on the screen. Next I will declare a suit. Please remember this suit and select all the playing cards and announce the colors.⾊Matching cards"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_3"
                       Margin="20,150,400,200"
                       Source="./pic/WOME/3.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_4"
                           Width="1261"
                           Margin="495,50,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Please remember the color of the black peach"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_4"
                       Margin="20,150,400,200"
                       Source="./pic/WOME/3.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_5"
                           Width="1261"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now the playing cards are clear, please select all cards with the same suit as the one just declared"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_5"
                       Margin="20,150,400,200"
                       Source="./pic/WOME/4.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <TextBlock x:Name="Text_6"
                           Width="1261"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see three playing cards on the screen. Please click on the playing cards in the order from small to large, and rearrange them."
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_6"
                       Margin="20,150,400,200"
                       Source="./pic/WOME/5.png"
                       Stretch="Fill" />

                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>

    </Grid>
</local:BaseUserControl>
