<local:BaseUserControl x:Class="crs.game.Games.Broadness_of_memory"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        <!--  LJN,Image controls for displaying feedback  -->
        <Image x:Name="CorrectImage"
               Grid.Row="0"
               Width="200"
               Height="200"
               Margin="590,-50,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />
        <Image Name="ErrorImage"
               Grid.Row="0"
               Width="200"
               Height="200"
               Margin="590,-50,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Visibility="Collapsed" />
        <!--  LJN,Changes in demand, hidden text feedback  -->
        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Text="" />
        <!--<Button Grid.Row="2"
                Width="200"
                Height="auto"
                HorizontalAlignment="Right"
                Click="Button_Click_"
                Content="return"
                FontSize="40"
                Style="{x:Null}" />-->
        <Grid Grid.Row="1">
            <Grid x:Name="GameGrid" ShowGridLines="False">
                <!--  LJN,BundleShowGridLinesChangefalseIt's  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
        <Canvas x:Name="CursorCanvas" IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Visible" />
        </Canvas>
    </Grid>
</local:BaseUserControl>