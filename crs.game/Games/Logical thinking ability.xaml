<local:BaseUserControl x:Class="crs.game.Games.Logical thinking ability"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  Image controls for displaying feedback  -->
        <Image x:Name="CorrectImage"
               Grid.Row="1"
               Margin="800,0,0,100"
               Width="300"
               Height="200"
               VerticalAlignment="Bottom"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="1"
               Margin="800,0,0,100"
               Width="300"
               Height="200"
               VerticalAlignment="Bottom"
               Visibility="Collapsed" />

        <WrapPanel x:Name="ImagePanel"
                   Grid.Row="1"
                   Margin="10"
                   HorizontalAlignment="Stretch"
                   Orientation="Horizontal" />
        <WrapPanel x:Name="ButtonPanel"
                   Grid.Row="2"
                   Margin="10"
                   Orientation="Horizontal" />

        <Button Grid.Row="4"
                Name="Confirm_Button"
                Width="240"
                Height="67"
                Margin="482,0,0,0"
                HorizontalAlignment="Left"
                Background="#FFF89F00"
                Click="Confirm_Button_Click"
                Content="OK"
                FontFamily="Microsoft YaHei"
                FontSize="40"
                FontWeight="Bold"
                Foreground="White" />
        <Border />
    </Grid>
</local:BaseUserControl>

