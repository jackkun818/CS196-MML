<local:BaseUserControl x:Class="crs.game.Games.Puzzle_explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1750"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.7*" />
            <!--  Create three lines to place text, pictures, and buttons  -->
        </Grid.RowDefinitions>
        <Grid x:Name="TextGrid" Grid.Row="0">
            <TextBlock x:Name="GuideTextBlock"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                            Margin="50,0,0,0"
                       Text="Now the puzzle game will be explained. Please click Next with the mouse to enter the explanation."
                       TextWrapping="Wrap" />
        </Grid>
        <Grid x:Name="PicGrid" Grid.Row="1">
            <Image x:Name="GameBody" Source="./pic/Puzzle explanation/GameBody.png" />
        </Grid>
        <!--  Get one hereGridIt is used to explain  -->
        <UniformGrid Name="ExplainButtonsGrid"
                     Grid.Row="2"
                     Columns="2">
            <Button x:Name="LastStep"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="LastStep_Click"
                    Content="Previous"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Collapsed" />
            <Button x:Name="NextStep"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="NextStep_Click"
                    Content="Next step"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <Button x:Name="Skip"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="Skip_Click"
                    Content="jump over"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
        </UniformGrid>
    </Grid>

</local:BaseUserControl>

