<local:BaseUserControl x:Class="crs.game.Games.Topological_memory"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       Focusable="True"
                       mc:Ignorable="d">

    <Grid>
        <!--  Parameter settings  -->
        <!--  Pattern display area  -->
        <Grid Grid.Row="1" Margin="10,10,10,55">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>
            <!--  Left: The pattern display area of ​​the memory stage  -->
            <UniformGrid Name="PatternGrid"
             Grid.Column="0"
             Margin="0,0,277,32"
             Columns="4"
             Focusable="False"
             RenderTransformOrigin="0.5,0.5"
             Rows="4">
                <UniformGrid.Resources>
                    <!-- Customize button styles, remove mouse over and press effects -->
                    <Style TargetType="Button">
                        <!-- Override the default button style -->
                        <Setter Property="OverridesDefaultStyle" Value="True" />

                        <!-- Custom templates -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Keep it as it is when hovering -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}" />
                                        </Trigger>
                                        <!-- Keep it as it is when pressed -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background}" />
                                        </Trigger>
                                        <!-- Disabled style -->
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="Transparent" />
                                            <Setter TargetName="border"
                                        Property="Opacity" 
                                        Value="1" />
                                        </Trigger>

                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="Transparent" />
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="Transparent" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <!-- Default state style -->
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </UniformGrid.Resources>

                <UniformGrid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="-0.005" />
                        <TranslateTransform />
                    </TransformGroup>
                </UniformGrid.RenderTransform>
            </UniformGrid>

            <!--  Right: Memories stage display separate patterns  -->
        </Grid>
        <Grid Name="RecallContainer"
              Margin="1060,250,10,0"
              VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Text above -->
                <RowDefinition Height="*" />
                <!-- Picture below -->
            </Grid.RowDefinitions>

            <!-- Prompt text -->
            <TextBlock Name="RecallText"
                       Grid.Row="0"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       TextWrapping="WrapWithOverflow"
                       Text="After memorizing the content and location of the picture, pressOKKey to answer questions"
                       Visibility="Visible" Margin="0,-88,0,0" />

            <!-- picture -->
            <Image Name="RecallImage"
                   Grid.Row="1"
                   Height="250"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Visible" />
        </Grid>

        <!--  Bottom: Start and Reset Buttons  -->
        <Button x:Name="ReadyButton"
                Width="240"
                Height="67"
                Margin="0,843,0,0"
                VerticalAlignment="Top"
                Background="#FFF89F00"
                Click="OnReadyButtonClick"
                Content="OK"
                FontFamily="Microsoft YaHei"
                FontSize="40"
                FontWeight="Bold"
                Visibility="Collapsed"
                Foreground="White" />
        <Button x:Name="NextButton"
                Width="240"
                Height="67"
                Margin="1075,633,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FFF89F00"
                Click="OnNextButtonClick"
                Content="Next question"
                FontSize="26"
                Foreground="White"
                Visibility="Visible" />
        <!--  Image controls for displaying feedback  -->
        <Image x:Name="CorrectImage"
               Grid.Row="0"
               Grid.Column="0"
               Width="300"
               Height="200"
               Margin="1100,0,0,680"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="0"
               Grid.Column="0"
               Width="300"
               Height="200"
               Margin="1100,0,0,680"
               Visibility="Collapsed" />


    </Grid>



</local:BaseUserControl>

