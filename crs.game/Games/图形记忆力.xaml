<local:BaseUserControl x:Class="crs.game.Games.图形记忆力"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="96*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="92*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <!--  第一个界面内容  -->
        <Grid x:Name="Grid1"
              Grid.Row="1"
              Grid.Column="1"
              VerticalAlignment="Center">
            <!--  定义两行  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  第一行，用于 Border  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="Transparent" />
            <Border Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderThickness="1">
                <Grid x:Name="imageContainer" />
            </Border>
            <Button x:Name="OK"
                    Grid.Row="1"
                    Width="240"
                    Height="66"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#F89F00"
                    Click="ContinueButton_Click"
                    Content="OK"
                    FontSize="40"
                    Foreground="White" />
        </Grid>

        <!--  第二个界面内容  -->
        <Grid x:Name="Grid2"
              Grid.Row="1"
              Grid.Column="1"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border x:Name="textBlock"
                        Width="322"
                        Height="65"
                        Margin="400,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Green"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Visibility="Collapsed">
                    <TextBlock x:Name="textBlock1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"
                               Foreground="Black"
                               TextWrapping="Wrap" />
                </Border>
            </Grid>
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#c2c3c8"
                    BorderThickness="0,15,0,15" />
            <Grid x:Name="ImageGrid" Grid.Row="1">
                <Border Grid.Column="0"
                        BorderBrush="White"
                        BorderThickness="1">
                    <Canvas x:Name="imageContainer2" />
                </Border>
                <Rectangle x:Name="SelectionBox"
                           Margin="847,0,173,0"
                           Panel.ZIndex="1"
                           Fill="Transparent"
                           Stroke="Black"
                           StrokeThickness="15"
                           Visibility="Visible" />
            </Grid>
            <Grid Grid.Row="2">
                <Button x:Name="AnswerOK"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#F89F00"
                        Click="OkButton_Click"
                        Content="OK"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </Grid>
        </Grid>

        <!--  图片控件，用于显示反馈  -->
        <Image x:Name="CorrectImage"
               Grid.Row="1"
               Grid.Column="1"
               Width="300"
               Height="200"
               Margin="0,50,0,0"
               VerticalAlignment="Top"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="1"
               Grid.Column="1"
               Width="300"
               Height="200"
               Margin="0,50,0,0"
               VerticalAlignment="Top"
               Visibility="Collapsed" />

    </Grid>
</local:BaseUserControl>