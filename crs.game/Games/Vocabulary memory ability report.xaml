<Window x:Class="crs.game.Games.Vocabulary_memory_ability_report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crs.game.Games"
        Width="800"
        Height="450"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!--  Title bar  -->
        <StackPanel Margin="10" Orientation="Vertical">
            <Border Padding="2"
                    Background="LightGray"
                    BorderBrush="Black"
                    BorderThickness="1">
                <TextBlock>
                    <Run FontSize="20"
                         FontWeight="Bold"
                         Text="patientID" />
                    <Run FontSize="10"
                         FontWeight="Bold"
                         Text="Born in" />
                </TextBlock>
            </Border>

            <Border Padding="2"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="Date"
                               Margin="2"
                               FontSize="20"
                               FontWeight="Bold" />
                </StackPanel>
            </Border>
        </StackPanel>

        <DataGrid x:Name="dataGrid"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="All">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="0,1,1,1" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Date, StringFormat='yyyy-MM-dd'}"
                                    Header="date" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding TotalTests}"
                                    Header="Total number of questions" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding Score}"
                                    Header="Number of correct answers" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding IncorrectCount}"
                                    Header="Number of answers errors" />
                <DataGridTextColumn Width="*"
                                    Binding="{Binding SkippedCount}"
                                    Header="Number of omissions" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
