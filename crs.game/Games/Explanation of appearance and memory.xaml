<local:BaseUserControl x:Class="crs.game.Games.Explanation of appearance and memory"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="923"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*" />
                <RowDefinition />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.05*" />
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="4"
                    Grid.ColumnSpan="4"
                    Margin="0,0,0,10">
                <Image x:Name="DisplayedImage"
                       Width="900"
                       Height="450"
                       Margin="200,200,200,300"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Border>

            <Grid Grid.Row="1"
                  Grid.RowSpan="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Width="972"
                  Height="144"
                  Margin="150,604,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top">
                <StackPanel x:Name="ThumbnailPanel"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                </StackPanel>
            </Grid>

            <Grid x:Name="ImageGrid"
                  Grid.Row="1"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.6*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>
                <Image x:Name="image" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="0.2*" />
                    <RowDefinition Height="0.2*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
            </Grid>
            <Canvas Grid.RowSpan="4" Grid.ColumnSpan="4">
                <TextBlock x:Name="InfoText1"
                           Canvas.Left="68"
                           Canvas.Top="260"
                           FontSize="40"
                           Text="" />
                <TextBlock x:Name="InfoText2"
                           Canvas.Left="46"
                           Canvas.Top="240"
                           Width="160"
                           FontSize="30"
                           RenderTransformOrigin="0.5,0.5"
                           Text=""
                           TextWrapping="Wrap" />
                <TextBlock x:Name="InfoText3"
                           Canvas.Left="490"
                           Canvas.Top="21"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontFamily="Microsoft YaHei"
                           FontSize="40"
                           FontWeight="Bold"
                           RenderTransformOrigin="0.5,0.5"
                           Text="Please remember the following character image information" />
                <TextBlock x:Name="InfoText4"
                           Canvas.Left="640"
                           Canvas.Top="760"
                           Canvas.Right="50"
                           Width="162"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Foreground="Red"
                           RenderTransformOrigin="0.5,0.5"
                           Text="" />
                <TextBlock x:Name="InfoText5"
                           Canvas.Left="46"
                           Canvas.Top="190"
                           FontSize="30"
                           Text="" />
                <TextBlock x:Name="CountdownTextBlock"
                           Canvas.Left="-896"
                           Canvas.Top="6"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="24" />
                <Button x:Name="button2"
                        Canvas.Left="1000"
                        Canvas.Top="830"
                        Canvas.Right="55"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Left"
                        Background="#FFF89F00"
                        Click="PressContinue_Button"
                        Content="Memory completion"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="button3"
                        Canvas.Left="1000"
                        Canvas.Top="830"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Left"
                        Background="#FFF89F00"
                        Click="OkButton_Click"
                        Content="Enter training"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </Canvas>
        </Grid>

        <Viewbox>
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now there is a photo of a person on the screen, please remember it"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Margin="200,180,200,200"
                       Source="./pic/GESI/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Width="1261"
                           Margin="0,55,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you will see multiple faces, please use the left and right keys to switch the picture. When you see the face you just remembered, please pressOKKey confirmation"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Margin="200,180,200,200"
                       Source="./pic/GESI/2.png"
                       Stretch="Fill"
                       Visibility="Hidden" />
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Image Name="CorrectOrNot"
                       Width="150"
                       Height="200"
                       Margin="607,70,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>

