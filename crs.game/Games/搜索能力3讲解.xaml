<local:BaseUserControl x:Class="crs.game.Games.搜索能力3讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid x:Name="ExplainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid x:Name="ExplainPictureGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <!--  用来存放TextExplainGrid，文字说明  -->
                    <RowDefinition Height="9*" />
                    <!--  用来存放PictureExplainGrid，图片说明  -->
                </Grid.RowDefinitions>
                <Grid x:Name="TextExplainGrid" Grid.Row="0">
                    <StackPanel>
                        <!--  用个stackpanel可以格式化  -->
                        <TextBlock x:Name="ModeTextBlock"
                        FontFamily="Microsoft YaHei"
                        FontSize="45"
                        VerticalAlignment="Top"
                                   Text="寻找目标物体模式：" />
                        <!--  用来指示现在是在讲哪个模块  -->
                        <TextBlock x:Name="ExplainTextBlock"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                                                  HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                                   Text="首先：" />
                    </StackPanel>

                </Grid>
                <Grid x:Name="PictureExplainGrid" Grid.Row="1">
                    <!--  FindMode的图片展示  -->
                    <Grid x:Name="FindModeExplainPic">
                        <Image x:Name="FindModeBackGround"
                               Width="1200"
                               Height="503"
                               VerticalAlignment="Top"
                               Source=" ./pic/EXOExplain/FindModeBackGround.png"
                               Visibility="Collapsed" />
                        <Image x:Name="FindModeItemsToFind"
                               Height="501"
                               Margin="203,503,203,0"
                               VerticalAlignment="Top"
                               Source=" ./pic/EXOExplain/FindModeItemsToFind.png"
                               Visibility="Collapsed" />
                        <Image x:Name="FindModeTotal"
                               Width="1200"
                               Height="677"
                               Margin="70,0,70,0"
                               VerticalAlignment="Center"
                               Source=" ./pic/EXOExplain/FindModeTotal.png"
                               Visibility="Collapsed" />
                    </Grid>
                    <!--  FindCountMode的图片展示  -->
                    <Grid x:Name="FindCountModeExplainPic">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="769*" />
                            <ColumnDefinition Width="571*" />
                        </Grid.ColumnDefinitions>
                        <Image x:Name="FindCountModeBackGround"
                               Grid.ColumnSpan="2"
                               Height="545"
                               Margin="-129,5,297,0"
                               VerticalAlignment="Top"
                               Source=" ./pic/EXOExplain/FindCountModeBackGround.png" />
                        <Image x:Name="FindCountModeItemsToCount"
                               Grid.ColumnSpan="2"
                               Height="134"
                               Margin="88,550,514,0"
                               VerticalAlignment="Top"
                               Source=" ./pic/EXOExplain/FindCountModeItemsToCount.png" />
                        <Image x:Name="FindCountModeTotal"
                               Grid.ColumnSpan="2"
                               Margin="196,-19,202,-9"
                               VerticalAlignment="Center"
                               Source=" ./pic/EXOExplain/FindCountModeTotal.png"
                               Visibility="Collapsed" />
                    </Grid>
                    <TextBlock x:Name="Introduction"
                        FontFamily="Microsoft YaHei"
                        FontSize="45"
                                                  HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                               Margin="0,-100,0,0"
                               Text="现在将进行寻找物体模式的讲解，请用鼠标点击下一步进入讲解。"
                               TextWrapping="Wrap"
                               Visibility="Visible" />
                </Grid>
            </Grid>

            <!--  这里弄个Grid是用来讲解  -->
            <UniformGrid Name="ExplainButtonsGrid"
                         Grid.Row="1"
                         Columns="3">
                <Button x:Name="LastStep"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="LastStep_Click"
                        Content="上一步"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed" />
                <Button x:Name="NextStep"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="NextStep_Click"
                        Content="下一步"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="Try"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="#F89F00"
                        Click="Try_Click"
                        Content="试玩"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="Skip"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="Skip_Click"
                        Content="跳过"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </UniformGrid>
        </Grid>

        <!--  这里弄个Grid是想用来存放模式三(find但不用count)的组件，相当于重新设计了  -->
        <Grid x:Name="FindPatternGrid"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid Name="BackGround" Grid.Row="0" />
            <!--  用来存放背景板  -->
            <Grid x:Name="SelectionAreaGrid" Grid.Row="0">
                <Canvas x:Name="SelectionCanvas" />
                <!--  用来存放那些随机出现的图片，叠在背景板上面  -->
            </Grid>
            <Grid x:Name="TargetAreaGrid" Grid.Row="1">
                <UniformGrid x:Name="TargetItemGrid">
                    <!--  用来存放那些正确的图像item  -->
                </UniformGrid>
            </Grid>
            <Button x:Name="FoundButton"
                    Grid.Row="2"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Panel.ZIndex="10"
                    Background="#F89F00"
                    Click="FoundButton_Click"
                    Content="OK"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <!--  确认选择的按钮  -->
        </Grid>

        <!--  这个是用来存放模式4的Grid，重新设计过  -->
        <Grid x:Name="FindAndCountPatternGrid"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="20*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="MainGrid" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Grid Name="BackGroundFindCount" Grid.Row="0" />
                <!--  用来存放背景板  -->
                <Grid x:Name="FindCountGrid" Grid.Row="0">
                    <Canvas x:Name="FindCountCanvas" />
                    <!--  用来存放那些随机出现的图片，叠在背景板上面,让用户计数  -->
                </Grid>
                <Grid x:Name="TargetAreaFindCount" Grid.Row="1">
                    <UniformGrid x:Name="TargetItemGridFindCount">
                        <!--  用来存放那些需要计数的图像item  -->
                    </UniformGrid>
                </Grid>
            </Grid>
            <Grid x:Name="MainGrid2" Grid.Column="1">
                <!--  用来存放输入框  -->
                <Border x:Name="textBlock"
                        Width="220"
                        Height="73"
                        Margin="0,206,0,0"
                        VerticalAlignment="Top"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="2">
                    <TextBlock x:Name="displayTextBlock"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="60"
                               Foreground="Black" />
                </Border>
                <!--  用来存放键盘  -->
                <Canvas x:Name="myCanvas"
                        Margin="0,271,0,0"
                        Background="Transparent">
                    <Button Canvas.Left="20"
                            Canvas.Top="20"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="1"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="20"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="2"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="20"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="3"
                            FontSize="24"
                            Foreground="White" />

                    <!--  Row 2  -->
                    <Button Canvas.Left="20"
                            Canvas.Top="100"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="4"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="100"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="5"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="100"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="6"
                            FontSize="24"
                            Foreground="White" />

                    <!--  Row 3  -->
                    <Button Canvas.Left="20"
                            Canvas.Top="180"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="7"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="180"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="8"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="180"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="9"
                            FontSize="24"
                            Foreground="White" />

                    <!--  Row 4  -->
                    <Button Canvas.Left="20"
                            Canvas.Top="260"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnBackButtonClick"
                            Content="←"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="100"
                            Canvas.Top="260"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnNumberButtonClick"
                            Content="0"
                            FontSize="24"
                            Foreground="White" />
                    <Button Canvas.Left="180"
                            Canvas.Top="260"
                            Width="60"
                            Height="60"
                            Background="#F89F00"
                            Click="OnSubmitButtonClick"
                            Content="✔"
                            FontSize="24"
                            Foreground="White" />


                </Canvas>
                <Button x:Name="ContinueToStart"
                        Canvas.Left="10"
                        Canvas.Top="325"
                        Width="241"
                        Height="67"
                        Margin="14,596,14,258"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="10"
                        Background="#F89F00"
                        Click="ContinueToStart_Click"
                        Content="进入游戏"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White"
                        Visibility="Collapsed" />
            </Grid>
        </Grid>

        <!--  图片控件，用于显示反馈  -->
        <Image x:Name="CorrectImage"
               Grid.Row="1"
               Grid.Column="0"
               Width="300"
               Height="200"
               Margin="0,600,0,0"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="1"
               Grid.Column="0"
               Width="300"
               Height="200"
               Margin="0,600,0,0"

               Visibility="Collapsed" />
        <Canvas x:Name="CursorCanvas"
                Panel.ZIndex="9999"
                IsHitTestVisible="False">
            <Image x:Name="CustomCursor"
                   Width="50"
                   Height="50"
                   Source="./guangbiao.png"
                   Visibility="Visible" />
        </Canvas>
    </Grid>
</local:BaseUserControl>

