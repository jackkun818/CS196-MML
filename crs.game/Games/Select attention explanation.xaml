<local:BaseUserControl x:Class="crs.game.Games.Select attention explanation"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">

    <Grid Focusable="False">
        <Grid Focusable="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>
            <Button x:Name="queren"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="242"
                    Height="67"
                    Margin="0,20,0,0"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="Button_Click"
                    Content="confirm"
                    Focusable="False"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White" />
            <Image x:Name="RandomImage"
                   Width="290"
                   Height="290"
                   Margin="350,276,350,203"
                   Source="GONT1.png"
                   Visibility="Hidden" />
            <Button x:Name="OkButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="241"
                    Height="67"
                    Margin="0,21,0,0"
                    VerticalAlignment="Top"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    Focusable="False"
                    FontFamily="Microsoft YaHei"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="        Enter training    " />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="▶" />
                </StackPanel>
            </Button>
            <Image x:Name="FeedbackImage"
                   Width="181"
                   Height="181"
                   Margin="422,78,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
            <Image x:Name="TargetImage"
                   Grid.Row="0"
                   Grid.Column="1"
                   Width="270"
                   Height="272"
                   Margin="34,276,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   RenderTransformOrigin="0.5,0.5"
                   Source="GONT1.png">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="0.073" />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:Name="TipBlock1"
                       Grid.Row="0"
                       Grid.Column="1"
                       Margin="0,0,0,50"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       FontSize="30"
                       TextWrapping="Wrap" />
        </Grid>


        <Viewbox Focusable="False">
            <Grid Width="1343" Height="990">
                <Button x:Name="Button_1"
                        Width="241"
                        Height="67"
                        Margin="189,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_1_Click"
                        Content="Previous"
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2"
                        Width="241"
                        Height="67"
                        Margin="550,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_2_Click"
                        Content="Next step"
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3"
                        Width="241"
                        Height="67"
                        Margin="911,850,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFF89F00"
                        Click="Button_3_Click"
                        Content="jump over"
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock x:Name="Text_1"
                           Margin="200,50,158,818"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Now you can see the selected target map on the right side that you need to confirm the selected target map"
                           TextWrapping="Wrap" />
                <Image x:Name="Image_1"
                       Width="290"
                       Height="290"
                       Margin="526,307,527,393"
                       Cursor=""
                       Source="./pic/GONT/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_2"
                           Margin="200,50,158,818"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="When you see the target appears on the screen, click Confirm"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_2"
                       Width="290"
                       Height="290"
                       Margin="527,307,526,393"
                       RenderTransformOrigin="0.496,1.037"
                       Source="./pic/GONT/1.png"
                       Stretch="Fill" />
                <TextBlock x:Name="Text_3"
                           Margin="200,50,158,818"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="40"
                           Text="Please do not react when non-target objects appear on the screen"
                           TextWrapping="Wrap"
                           Visibility="Hidden" />
                <Image x:Name="Image_3"
                       Width="420"
                       Height="405"
                       Margin="462,250,461,393"
                       Source="./pic/GONT/2.png"
                       Stretch="Fill" />
            </Grid>
        </Viewbox>
    </Grid>
</local:BaseUserControl>
