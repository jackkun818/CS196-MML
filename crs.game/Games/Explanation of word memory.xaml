<local:BaseUserControl x:Class="crs.game.Games.Explanation_of_word_memory"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="CountdownDisplay" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="40" RenderTransformOrigin="-1.45,0.497" Margin="0,0,70,0" Visibility="Collapsed"/>
            <TextBlock x:Name="WordsToMemorize" Grid.Row="0" Text="This is need you remember of word" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,20,20,20" FontSize="72" FontWeight="Bold"/>
            <!--Button x:Name="MemorizeOK" Background="#F89F00" Foreground="White" Focusable="False" Content="Memory is ready" HorizontalAlignment="Left" Margin="20,20,20,20" VerticalAlignment="Center" Height="67" Width="241" Grid.Row="2" Grid.RowSpan="2" FontSize="26" Click="MemorizeOK_Click"/-->
            <!--Button x:Name="OkButton"  Background="#F89F00" Foreground="White" Focusable="False" Content="Enter training" HorizontalAlignment="Right" Margin="20,20,20,20" VerticalAlignment="Center" Height="67" Width="241" Grid.Row="2" FontSize="26" Click="OkButton_Click"/-->
            <Border x:Name="BeltBorder" Grid.Row="1" BorderBrush="#c2c3c8" BorderThickness="0,15,0,15">
                <Canvas x:Name="WordArea" Grid.Row="1">
                </Canvas>
            </Border>
            <Rectangle Grid.Row="1" x:Name="TargetArea" Height="298" Width="200" StrokeThickness="15"  Stroke="Black" Fill="Transparent" HorizontalAlignment="Center" Canvas.Left="1118" VerticalAlignment="Center" Canvas.Top="-10" Margin="1018,0,0,0" Visibility="Collapsed"/>

            <!-- Image controls for displaying feedback -->
            <Image Grid.Row="0" Name="CorrectImage" Width="300" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed" Margin="512,52,0,0"/>
            <Image Grid.Row="0" Name="ErrorImage" Width="300" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="512,50,0,0" Visibility="Collapsed"/>
            <!-- Text control for displaying feedback -->
            <!--TextBlock Grid.Row="0" Name="CorrectTextBlock" Width="150" Height="150" Text="correct!" FontSize="40" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed" TextAlignment="Center" Margin="0,282,0,0"/-->
            <!--TextBlock Grid.Row="0" Name="ErrorTextBlock" Width="150" Height="150" Text="mistake!" FontSize="40" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed" TextAlignment="Center" Margin="0,282,0,0"/-->
        </Grid>


        <Viewbox x:Name="Test">
            <Grid Width="1343" Height="990">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1339*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Button_1" Content="Previous" FontFamily="Microsoft YaHei" FontWeight="Bold" Background="#FFF89F00" FontSize="40" Foreground="White" Cursor="Hand" Click="Button_1_Click" Margin="189,850,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="67" Width="241">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_2" Content="Next step" FontFamily="Microsoft YaHei" FontWeight="Bold" Background="#FFF89F00" FontSize="40" Foreground="White" Cursor="Hand" Click="Button_2_Click" Margin="550,850,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="67" Width="241">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="Button_3" Content="jump over" FontFamily="Microsoft YaHei" FontWeight="Bold" Background="#FFF89F00" FontSize="40" Foreground="White" Cursor="Hand" Click="Button_3_Click" Margin="911,850,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="67" Width="241">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="MemorizeOK" Background="#F89F00" FontFamily="Microsoft YaHei" FontWeight="Bold" Foreground="White" Focusable="False" Content="Memory is ready" HorizontalAlignment="Left" Margin="329,850,0,0" VerticalAlignment="Top" Height="67" Width="241"  FontSize="40" Click="MemorizeOK_Click"/>
                <Button x:Name="OkButton"  Background="#F89F00" FontFamily="Microsoft YaHei" FontWeight="Bold" Foreground="White" Focusable="False" Content="Enter training" HorizontalAlignment="Left" Margin="770,850,0,0" VerticalAlignment="Top" Height="67" Width="241"  FontSize="40" Click="OkButton_Click"/>
                <TextBlock x:Name="Text_1" HorizontalAlignment="Center" Margin="0,55,0,0" TextWrapping="Wrap" Text="Now you can see that there is 1 word on the interface, please remember it" VerticalAlignment="Top" FontSize="40"/>
                <Image x:Name="Image_1" Margin="535,338,531,474" Source="./pic/WORT/1.png" Stretch="Fill"/>
                <TextBlock x:Name="Text_2" HorizontalAlignment="Center" Margin="0,55,0,0" TextWrapping="Wrap" Text="Now you will see a series of words passing from left to right, and when you see words matching the words you remember pass through the box, pressOKkey" VerticalAlignment="Top" FontSize="40" Width="1261" Visibility="Hidden"/>
                <TextBlock Grid.Row="0" Name="CorrectTextBlock" FontFamily="Microsoft YaHei" FontWeight="Bold" Width="150" Height="150" Text="correct!" FontSize="40" Foreground="Green" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed" TextAlignment="Center" Margin="0,700,0,0"/>
                <TextBlock Grid.Row="0" Name="ErrorTextBlock" FontFamily="Microsoft YaHei" FontWeight="Bold" Width="150" Height="150" Text="mistake!" FontSize="40" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed" TextAlignment="Center" Margin="0,700,0,0"/>
                <Image x:Name="Image_2" Margin="41,370,0,474" Source="./pic/WORT/2.png"  Visibility="Hidden"/>
            </Grid>

        </Viewbox>
    </Grid>
</local:BaseUserControl>