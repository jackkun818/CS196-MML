<local:BaseUserControl
    x:Class="crs.game.Games.Logical_reasoning_ability"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:crs.game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1340"
    Height="923"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*" />
            <RowDefinition />
            <RowDefinition Height="0.2*" />
            <RowDefinition />
            <RowDefinition Height="0.6*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>

            <Image
                x:Name="QImage1"
                Grid.Column="1"
                Width="200"
                Height="200" />
            <Image
                x:Name="QImage2"
                Grid.Column="3"
                Width="200"
                Height="200" />
            <Image
                x:Name="QImage3"
                Grid.Column="5"
                Width="200"
                Height="200" />
            <Image
                x:Name="QImage4"
                Grid.Column="7"
                Width="200"
                Height="200" />
            <Button
                Grid.Column="9"
                Width="200"
                Height="200"
                Background="#d0e3b6"
                BorderThickness="0"
                Click="Button_Click">
                <Image x:Name="Image" Grid.Column="9" />
            </Button>
        </Grid>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="45"
            Text="Please select your answer:" />
        <Button
            x:Name="Confirm_Button"
            Grid.Row="4"
            Width="241"
            Height="67"
            Margin="0,0,20,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#FFF89F00"
            Click="ConFirm_Click"
            Content="confirm"
            Focusable="False"
            FontFamily="Microsoft YaHei"
            FontSize="40"
            FontWeight="Bold"
            Foreground="White" />
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
                <ColumnDefinition />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Width="200"
                Height="200"
                Panel.ZIndex="-2"
                Background="#d0e3b6"
                BorderThickness="0"
                Click="Button_Click_1"
                Focusable="False">
                <Image x:Name="AImage1" />
            </Button>
            <Button
                Grid.Column="3"
                Width="200"
                Height="200"
                Panel.ZIndex="-2"
                Background="#d0e3b6"
                BorderThickness="0"
                Click="Button_Click_2"
                Focusable="False">
                <Image x:Name="AImage2" />
            </Button>
            <Button
                Grid.Column="5"
                Width="200"
                Height="200"
                Panel.ZIndex="-2"
                Background="#d0e3b6"
                BorderThickness="0"
                Click="Button_Click_3"
                Focusable="False">
                <Image x:Name="AImage3" />
            </Button>
            <Button
                Grid.Column="7"
                Width="200"
                Height="200"
                Panel.ZIndex="-2"
                Background="#d0e3b6"
                BorderThickness="0"
                Click="Button_Click_4"
                Focusable="False">
                <Image x:Name="AImage4" />
            </Button>

        </Grid>
        <!--  Image controls for displaying feedback  -->
        <Image
            x:Name="CorrectImage"
            Width="180"
            Height="120"
            Margin="900,0,0,0"
            VerticalAlignment="Top"
            Visibility="Collapsed" />
        <Image
            Name="ErrorImage"
            Width="180"
            Height="120"
            Margin="900,0,0,0"
            VerticalAlignment="Top"
            Visibility="Collapsed" />
    </Grid>
</local:BaseUserControl>