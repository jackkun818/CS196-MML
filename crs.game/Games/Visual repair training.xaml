<local:BaseUserControl x:Class="crs.game.Games.Visual_repair_training"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:crs.game"
                       Width="1340"
                       Height="920"
                       Background="Black">
    <Grid>
        <Grid x:Name="TrainGrid" Visibility="Collapsed">
            <Ellipse x:Name="FocusPoint"
                     Width="40"
                     Height="40"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Fill="Green" />
        </Grid>
        <Grid x:Name="TipGrid" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Black">
                <TextBlock Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="Please look at the fixed point in the center of the screen!"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="Please press each time the fixed point changesOKkey！"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Margin="0,0,0,20"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="If light stimulation occurs, please pressOKkey!"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock Margin="0,0,0,40"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="Please keep your eyes on fixed points!"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <Button Width="100"
                        Height="50"
                        Background="Black"
                        BorderBrush="White"
                        Click="Button_Click_Continue"
                        Content="continue"
                        FontSize="20"
                        Foreground="White" />
            </StackPanel>
        </Grid>
        <Grid x:Name="RestGrid"
              Background="Transparent"
              Visibility="Collapsed">
            <Label x:Name="RestLabel"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="rest 10 Second"
                   FontSize="48"
                   Foreground="White" />
            <Image x:Name="RestImage"
                   Stretch="Uniform"
                   Visibility="Hidden" />
        </Grid>
        <!--  Image controls for displaying feedback  -->
        <Image x:Name="CorrectImage"
               Grid.Row="1"
               Grid.Column="2"
               Width="300"
               Height="200"
               VerticalAlignment="Bottom"
               Visibility="Collapsed" />
        <Image Name="ErrorImage"
               Grid.Row="1"
               Grid.Column="2"
               Width="300"
               Height="200"
               VerticalAlignment="Bottom"
               Visibility="Collapsed" />

    </Grid>
</local:BaseUserControl>
