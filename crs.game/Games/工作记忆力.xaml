<local:BaseUserControl x:Class="crs.game.Games.工作记忆力"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="0*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Transparent" />
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <!--  图片控件，用于显示反馈  -->
                <Image x:Name="CorrectImage"
                       Width="300"
                       Height="200"
                       HorizontalAlignment="Right"
                       Panel.ZIndex="1000"
                       Visibility="Collapsed" />
                <Image Name="ErrorImage"
                       Width="300"
                       Height="200"
                       HorizontalAlignment="Right"
                       Panel.ZIndex="1000"
                       Visibility="Collapsed" />

                <Border BorderBrush="Black" BorderThickness="1">
                    <UniformGrid x:Name="imageContainer"
                                 Margin="-1,0,0,0"
                                 Columns="9" />

                </Border>

                <Border BorderBrush="Black" BorderThickness="1">
                    <UniformGrid x:Name="imageBackContainer"
                                 Margin="-1,0,0,0"
                                 Columns="9"
                                 Visibility="Hidden" />
                </Border>

                <TextBlock x:Name="suitTextBlock_model2"
                           Margin="192,74,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="48"
                           Foreground="Black"
                           Text="" />
            </Grid>
            <Grid Grid.Row="1">

                <Border BorderBrush="Black" BorderThickness="1">
                    <UniformGrid x:Name="imageBackContainer2" Columns="9" />
                </Border>
                <Border BorderBrush="Black" BorderThickness="1">
                    <UniformGrid x:Name="imageContainer2" Columns="9" />
                </Border>

            </Grid>
            <Grid Grid.Row="2">
                <Border BorderBrush="Black" BorderThickness="1">
                    <UniformGrid x:Name="imageBackContainer3" Columns="9" />
                </Border>
                <Border BorderBrush="Black" BorderThickness="1">
                    <UniformGrid x:Name="imageContainer3" Columns="9" />
                </Border>

            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border x:Name="textBlock"
                        Grid.Column="0"
                        Width="241"
                        Height="67"
                        Margin="130,0,90,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Green"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Visibility="Collapsed" />
                <Button x:Name="begin"
                        Grid.Column="1"
                        Width="241"
                        Height="67"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#FFF89F00"
                        Click="beginButton_Click"
                        Content="开始"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
                <Button x:Name="confirm"
                        Grid.Column="2"
                        Width="241"
                        Height="67"
                        Margin="90,0,130,0"
                        HorizontalAlignment="Left"
                        Background="#FFF89F00"
                        Click="confirmButton_Click"
                        Content="OK"
                        Cursor="Hand"
                        FontFamily="Microsoft YaHei"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="White" />
            </Grid>
        </Grid>
        <Grid Grid.Column="1">


            <TextBlock x:Name="TimeTextBlock"
                       Width="164"
                       Height="73"
                       Margin="0,31,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="54"
                       Foreground="Black" />

            <TextBlock x:Name="levelTextBlock"
                       Width="196"
                       Height="73"
                       Margin="0,121,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="54"
                       Foreground="Black"
                       Text="" />

            <TextBlock x:Name="modeTextBlock"
                       Width="196"
                       Height="157"
                       Margin="0,222,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="32"
                       Foreground="Black"
                       Text=""
                       TextWrapping="Wrap" />


        </Grid>
    </Grid>
</local:BaseUserControl>

