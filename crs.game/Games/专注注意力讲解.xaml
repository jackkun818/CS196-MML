<local:BaseUserControl x:Class="crs.game.Games.专注注意力讲解"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:hc="https://handyorg.github.io/handycontrol"
                       xmlns:local="clr-namespace:crs.game"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       Width="1340"
                       Height="920"
                       Background="#0000"
                       mc:Ignorable="d">
    <Grid>
        <Grid x:Name="first_game" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="0.4*" />
            </Grid.RowDefinitions>
            <Button x:Name="OkButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="241"
                    Height="67"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#FFF89F00"
                    Click="OkButton_Click"
                    FontSize="40"
                    Foreground="White"
                    Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="        进入训练    " />
                    <TextBlock VerticalAlignment="Center"
                               FontSize="40"
                               Text="▶" />
                </StackPanel>
            </Button>
            <TextBlock x:Name="TipBlock"
                       Grid.Row="1"
                       Grid.Column="0"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       TextWrapping="Wrap" />
            <Image x:Name="TargetImage"
                   Grid.RowSpan="2"
                   Grid.Column="1"
                   Width="240"
                   Height="240"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
            <UniformGrid Grid.RowSpan="2"
                         Grid.Column="0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Columns="3"
                         Rows="1">
                <Border x:Name="Border1"
                        Margin="10"
                        BorderBrush="Blue"
                        BorderThickness="2">
                    <Image x:Name="Image1"
                           Width="240"
                           Height="240" />
                </Border>
                <Border x:Name="Border2"
                        Margin="10"
                        BorderBrush="Blue"
                        BorderThickness="0">
                    <Image x:Name="Image2"
                           Width="240"
                           Height="240" />
                </Border>
                <Border x:Name="Border3"
                        Margin="10"
                        BorderBrush="Blue"
                        BorderThickness="0">
                    <Image x:Name="Image3"
                           Width="240"
                           Height="240" />
                </Border>
            </UniformGrid>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Margin="0,300,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       Text="请找出以下图片" />
        </Grid>


        <Grid x:Name="page_panel"
              Background="#00000000"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid x:Name="page_0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                          <Path Stroke="Red" StrokeThickness="10" Fill="Red"
                                Data="M 540,450 L 770,350" />
                    <Path Stroke="GreenYellow" StrokeThickness="10" Fill="LightGreen" 
                                Data=" M 540,450 L 770,550" />


                    <Image x:Name="Image4"
                           Grid.Row="0"
                           Width="300"
                           Height="300"
                           Margin="0,0,500,0"/>
                    <Image x:Name="Image5"
                            Grid.Row="0"
                           Width="300"
                           Height="300"
                           Margin="500,300,0,0"/>
                    <Image x:Name="Image6"
                        Grid.Row="0"
                           Width="300"
                           Height="300"
                           Margin="500,-300,0,0"/>

                    <TextBlock x:Name="page_0_message"
                               Grid.Row="0"
                               Margin="10"
                               FontSize="40"
                               Text="现在您可以看到界面上有三张图片，左侧这张图与右侧上方的图不同，与右侧下方的图相同"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap" />
                </Grid>

                <Grid x:Name="page_1"
                      Margin="10"
                      Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0"
                           Height="300"
                           Margin="1000,0,0,0"
                           Source="./pic/AUFM/1.png" />

                    <Image Grid.Row="0"
                           Height="300"
                           Margin="-500,0,0,0"
                           Source="./pic/AUFM/2.png"
 />
                    <Image Grid.Row="0"
                           Height="300"
                           Margin="0,0,0,0"
                           Source="./pic/AUFM/4.png"
/>

                    <Image Grid.Row="0"
                           Height="300"
                           Margin="-1000,0,0,0"
                           Source="./pic/AUFM/1.png"
 />

                    <TextBlock x:Name="page_1_message"
                               Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Margin="10"
                               FontSize="40"
                               Text="现在请你通过按下键盘上的方向按键，在下面左侧的三副图中选出与右侧图片相同的图片，并按下Enter键确认"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap" />

                </Grid>
            </Grid>
            <Viewbox>
                <Grid Width="1343" Height="990">
                    <Button x:Name="lastButton"
                            Width="241"
                            Height="67"
                            Margin="189,850,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#FFF89F00"
                            Click="lastButton_Click"
                            Content="上一步"
                            Cursor="Hand"
                            FontSize="40"
                            Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="nextButton"
                            Width="241"
                            Height="67"
                            Margin="550,850,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#FFF89F00"
                            Click="nextButton_Click"
                            Content="下一步"
                            Cursor="Hand"
                            FontSize="40"
                            Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="ignoreButton"
                            Width="241"
                            Height="67"
                            Margin="911,850,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#FFF89F00"
                            Click="ignoreButton_Click"
                            Content="跳过"
                            Cursor="Hand"
                            FontSize="40"
                            Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</local:BaseUserControl>
