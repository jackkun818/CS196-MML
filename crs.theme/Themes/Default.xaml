    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/crs.theme;component/Themes/Color.xaml" />
        <ResourceDictionary Source="pack://application:,,,/crs.theme;component/Themes/BitmapImage.xaml" />
