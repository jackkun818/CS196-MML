<UserControl
    x:Class="crs.dialog.Views.AboutUsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:crs.dialog.ViewModels"
    xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    Width="500"
    Height="400"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:AboutUsDialogViewModel}}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Transparent"
    mc:Ignorable="d">
    <Border
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="Bold body"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="#404040"
                    Text="about Us" />
                <Button
                    Width="52"
                    Height="57"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding CancelCommand}"
                    Content="X"
                    FontSize="30"
                    Foreground="#000000" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image
                    Grid.Column="0"
                    Width="100"
                    Source="{StaticResource crs_companyLOGO1}" />
                <TextBlock
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="#aeaeae"
                    Text="Software Model:V1.00.00.01" />
            </Grid>
            <Grid Grid.Row="2" Height="120">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    BorderBrush="#e2e2e2"
                    BorderThickness="1">
                    <UniformGrid Columns="2" Rows="1">
                        <TextBlock
                            Margin="30,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#aeaeae"
                            Text="Release version number" />
                        <TextBlock
                            Margin="0,0,30,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#404040"
                            Text="V1.00.00.01" />
                    </UniformGrid>
                </Border>
                <Border
                    Grid.Row="1"
                    BorderBrush="#e2e2e2"
                    BorderThickness="1">
                    <UniformGrid Columns="2" Rows="1">
                        <TextBlock
                            Margin="30,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#aeaeae"
                            Text="Full version number" />
                        <TextBlock
                            Margin="0,0,30,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#404040"
                            Text="V1.00.00.01" />
                    </UniformGrid>
                </Border>
            </Grid>

        </Grid>
    </Border>
</UserControl>
