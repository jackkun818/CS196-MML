<UserControl
    x:Class="crs.dialog.Views.ReportSettingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:crs.extension.Controls;assembly=crs.extension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lcc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:crs.dialog.ViewModels"
    xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:ReportSettingDialogViewModel}}"
    d:Height="1080"
    d:Width="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <DockPanel>
        <hc:SimplePanel
            Height="100"
            Background="Transparent"
            DockPanel.Dock="Top"
            MouseUp="SimplePanel_MouseUp" />
        <hc:SimplePanel
            Width="280"
            Background="Transparent"
            DockPanel.Dock="Left"
            MouseUp="SimplePanel_MouseUp" />

        <hc:SimplePanel Background="White">
            <DockPanel Margin="45,10,45,45">
                <UniformGrid
                    Columns="3"
                    DockPanel.Dock="Top"
                    Rows="1">
                    <Button
                        Width="58"
                        Height="46"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}">
                        <Button.Background>
                            <ImageBrush ImageSource="{StaticResource crs_return}" />
                        </Button.Background>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold">
                        Report settings
                    </TextBlock>
                </UniformGrid>
                <Border
                    Margin="0,10,0,0"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource EffectShadow2}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="8*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <UniformGrid
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            Columns="2">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Foreground="#000000"
                                    Text="Evaluation report-Title prefix:" />
                                <hc:TextBox
                                    Grid.Column="1"
                                    Width="400"
                                    Height="60"
                                    Margin="20,0,0,0"
                                    Padding="20,0"
                                    HorizontalAlignment="Left"
                                    hc:InfoElement.Placeholder="Please enter a report prefix"
                                    hc:InfoElement.ShowClearButton="True"
                                    Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                    FontSize="20"
                                    Foreground="#010101"
                                    Text="{Binding EvaluateReportTitlePrefix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="24"
                                    Foreground="#000000"
                                    Text="Training Report-Title prefix:" />
                                <hc:TextBox
                                    Grid.Column="1"
                                    Width="400"
                                    Height="60"
                                    Margin="20,0,0,0"
                                    Padding="20,0"
                                    HorizontalAlignment="Left"
                                    hc:InfoElement.Placeholder="Please enter a report prefix"
                                    hc:InfoElement.ShowClearButton="True"
                                    Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                    FontSize="20"
                                    Foreground="#010101"
                                    Text="{Binding TrainReportTitlePrefix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </UniformGrid>
                        <Image Grid.Row="1" Source="{StaticResource crs_Report settings background image}" />
                        <Button
                            Grid.Row="2"
                            Width="247"
                            Height="67"
                            Margin="30,0,0,0"
                            HorizontalAlignment="Center"
                            hc:BorderElement.CornerRadius="5"
                            Background="{StaticResource crs_SolidColorBrush.F89F00}"
                            Command="{Binding ConfirmCommand}"
                            DockPanel.Dock="Bottom"
                            FontSize="28"
                            Foreground="White">
                            <Button.Style>
                                <Style BasedOn="{StaticResource ButtonBaseStyle}" TargetType="Button">
                                    <Setter Property="Content" Value="Sure" />
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </DockPanel>
        </hc:SimplePanel>
    </DockPanel>
</UserControl>
