<UserControl
    x:Class="crs.dialog.Views.DigitalHumanEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:crs.dialog.ViewModels"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:DigitalHumanEditViewModel}}"
    d:Height="1080"
    d:Width="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Border
        Width="565"
        Height="600"
        Background="White"
        CornerRadius="18">
        <hc:SimplePanel>
            <DockPanel LastChildFill="False">
                <TextBlock
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Top"
                    FontSize="28"
                    FontWeight="Bold">
                    新增数字人
                </TextBlock>
                <hc:Gravatar
                    Width="360"
                    Height="360"
                    Margin="0,55,0,0"
                    HorizontalAlignment="Center"
                    hc:BorderElement.CornerRadius="6"
                    DockPanel.Dock="Top">
                    <Image Source="{Binding QrCodeImage, Converter={StaticResource crs_Bitmap2ImageSourceConverter}}" Stretch="Fill" />
                </hc:Gravatar>
                <TextBlock
                    Margin="0,25,0,0"
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Top"
                    FontSize="26">
                    （请用手机扫描二维码添加数字人）
                </TextBlock>
            </DockPanel>
            <Button
                Width="30"
                Height="30"
                Margin="0,25,45,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Black"
                Command="{Binding CancelCommand}">
                <Button.OpacityMask>
                    <ImageBrush ImageSource="{StaticResource crs_关闭}" />
                </Button.OpacityMask>
            </Button>
        </hc:SimplePanel>
    </Border>
</UserControl>
