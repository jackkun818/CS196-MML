<UserControl
    x:Class="crs.dialog.Views.MocaReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls;assembly=crs.extension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lcc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mocas="clr-namespace:crs.extension.Controls.MoCAs;assembly=crs.extension"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    xmlns:vm="clr-namespace:crs.dialog.ViewModels"
    xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:MocaReportViewModel}}"
    d:MinHeight="1080"
    d:Width="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <DockPanel>
        <hc:SimplePanel
            Height="100"
            Background="Transparent"
            DockPanel.Dock="Top"
            MouseUp="SimplePanel_MouseUp" />
        <hc:SimplePanel
            Width="280"
            Background="Transparent"
            DockPanel.Dock="Left"
            MouseUp="SimplePanel_MouseUp" />

        <hc:SimplePanel Background="White">
            <DockPanel Margin="45,10,45,45">
                <UniformGrid
                    Columns="3"
                    DockPanel.Dock="Top"
                    Rows="1">
                    <Button
                        Width="58"
                        Height="46"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}">
                        <Button.Background>
                            <ImageBrush ImageSource="{StaticResource crs_返回}" />
                        </Button.Background>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold">
                        MoCA量表报告
                    </TextBlock>
                    <Button
                        Width="166"
                        Height="52"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        hc:BorderElement.CornerRadius="26"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        Click="ExportPDFButton_Click"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="30"
                                VerticalAlignment="Center"
                                Source="{StaticResource crs_导出报告}" />
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">导出报告</TextBlock>
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <Border
                    Margin="0,10,0,0"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource EffectShadow2}">
                    <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto">
                        <DockPanel
                            x:Name="page"
                            Margin="40,20,40,40"
                            LastChildFill="False">
                            <Border
                                Height="120"
                                BorderBrush="Black"
                                BorderThickness="0,0,0,1"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24">
                                <UniformGrid
                                    Margin="0,0,0,20"
                                    Columns="3"
                                    Rows="2">
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">姓名：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.Name, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">性别：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.SexType, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">年龄：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.Age, StringFormat={}{0}岁, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">训练用时：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding DurationTime, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">模式：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="标准评估"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">报告时间：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding DateTime, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Rectangle
                                    Width="7"
                                    Height="27"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                    RadiusX="3"
                                    RadiusY="3" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Bold">
                                    测评得分
                                </TextBlock>
                            </StackPanel>
                            <lcc:CartesianChart
                                Height="380"
                                Margin="0,20,0,0"
                                DataContext="{Binding CartesianChartItem}"
                                DockPanel.Dock="Top"
                                LegendPosition="Top"
                                Series="{Binding Series}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}" />
                            <DockPanel
                                Margin="20,20,20,0"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24"
                                TextBlock.FontWeight="Bold">
                                <TextBlock DockPanel.Dock="Left">主要问题：</TextBlock>
                                <TextBlock Text="{Binding Problem}" TextWrapping="Wrap" />
                            </DockPanel>
                            <Border
                                Margin="0,20,0,0"
                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                DockPanel.Dock="Top">
                                <TextBlock
                                    Margin="20"
                                    FontSize="24"
                                    Text="{Binding Conclusion}"
                                    TextWrapping="Wrap" />
                            </Border>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Rectangle
                                    Width="7"
                                    Height="27"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                    RadiusX="3"
                                    RadiusY="3" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Bold">
                                    量表详情
                                </TextBlock>
                            </StackPanel>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24">
                                <controls:Crs_SubjectReport
                                    Height="55"
                                    TextBlock.FontSize="26"
                                    TextBlock.FontWeight="Bold">
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">得分</TextBlock>
                                    </controls:Crs_SubjectReport.RightContent>
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        视空间/执行能力
                                    </TextBlock>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport DataContext="{Binding SubjectItems[0]}">
                                    <behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger EventName="Loaded">
                                            <behaviors:ChangePropertyAction
                                                PropertyName="OriginName"
                                                TargetObject="{Binding}"
                                                Value="视空间/执行能力" />
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource crs_SolidColorBrush.F89F00}"
                                            Text="{Binding Fraction, TargetNullValue=--, FallbackValue=--}" />
                                    </controls:Crs_SubjectReport.RightContent>
                                    <UniformGrid
                                        Margin="20"
                                        Columns="3"
                                        Rows="1">
                                        <DockPanel
                                            Margin="20,0"
                                            HorizontalAlignment="Stretch"
                                            DataContext="{Binding ChildrenItems[0]}">
                                            <ContentControl
                                                Margin="0,20,0,0"
                                                Content="{Binding AnswerItems[0]}"
                                                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                DockPanel.Dock="Bottom" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Top"
                                                FontSize="24" />
                                            <Image
                                                Height="260"
                                                Margin="0,20,0,0"
                                                Source="{Binding BitmapData, IsAsync=True, Converter={StaticResource crs_BitmapStream2ImageSource_380_Converter}}" />
                                        </DockPanel>
                                        <DockPanel
                                            Margin="20,0"
                                            HorizontalAlignment="Stretch"
                                            DataContext="{Binding ChildrenItems[1]}">
                                            <ContentControl
                                                Margin="0,20,0,0"
                                                Content="{Binding AnswerItems[0]}"
                                                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                DockPanel.Dock="Bottom" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Top"
                                                FontSize="24" />
                                            <Image
                                                Height="260"
                                                Margin="0,20,0,0"
                                                Source="{Binding BitmapData, IsAsync=True, Converter={StaticResource crs_BitmapStream2ImageSource_380_Converter}}" />
                                        </DockPanel>
                                        <DockPanel
                                            Margin="20,0"
                                            HorizontalAlignment="Stretch"
                                            DataContext="{Binding ChildrenItems[2]}">
                                            <UniformGrid
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Columns="3"
                                                DockPanel.Dock="Bottom"
                                                Rows="1"
                                                TextBlock.FontSize="28">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock VerticalAlignment="Center" FontSize="24">轮廓</TextBlock>
                                                    <ContentControl
                                                        Margin="10,0,0,0"
                                                        Content="{Binding AnswerItems[0]}"
                                                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock VerticalAlignment="Center" FontSize="24">数字</TextBlock>
                                                    <ContentControl
                                                        Margin="10,0,0,0"
                                                        Content="{Binding AnswerItems[1]}"
                                                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock VerticalAlignment="Center" FontSize="24">指针</TextBlock>
                                                    <ContentControl
                                                        Margin="10,0,0,0"
                                                        Content="{Binding AnswerItems[2]}"
                                                        ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}" />
                                                </StackPanel>
                                            </UniformGrid>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Top"
                                                FontSize="24">
                                                画钟（11点10分）
                                            </TextBlock>
                                            <Image
                                                Height="260"
                                                Margin="0,20,0,0"
                                                Source="{Binding BitmapData, IsAsync=True, Converter={StaticResource crs_BitmapStream2ImageSource_380_Converter}}" />
                                        </DockPanel>
                                    </UniformGrid>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport
                                    Height="55"
                                    TextBlock.FontSize="26"
                                    TextBlock.FontWeight="Bold">
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        命名
                                    </TextBlock>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport DataContext="{Binding SubjectItems[1]}">
                                    <behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger EventName="Loaded">
                                            <behaviors:ChangePropertyAction
                                                PropertyName="OriginName"
                                                TargetObject="{Binding}"
                                                Value="命名" />
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource crs_SolidColorBrush.F89F00}"
                                            Text="{Binding Fraction, TargetNullValue=--, FallbackValue=--}" />
                                    </controls:Crs_SubjectReport.RightContent>
                                    <UniformGrid
                                        Margin="20"
                                        Columns="3"
                                        Rows="1">
                                        <DockPanel
                                            Margin="20,0"
                                            HorizontalAlignment="Stretch"
                                            DataContext="{Binding ChildrenItems[0]}">
                                            <Border
                                                Margin="0,20,0,0"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                            <ContentControl
                                                Margin="0,20,0,0"
                                                Content="{Binding AnswerItems[0]}"
                                                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                DockPanel.Dock="Bottom" />
                                            <Image
                                                Width="322"
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{StaticResource crs_题目插图3}" />
                                        </DockPanel>
                                        <DockPanel
                                            Margin="20,0"
                                            HorizontalAlignment="Stretch"
                                            DataContext="{Binding ChildrenItems[1]}">
                                            <Border
                                                Margin="0,20,0,0"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                            <ContentControl
                                                Margin="0,20,0,0"
                                                Content="{Binding AnswerItems[0]}"
                                                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                DockPanel.Dock="Bottom" />
                                            <Image
                                                Width="322"
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{StaticResource crs_题目插图1}" />
                                        </DockPanel>
                                        <DockPanel
                                            Margin="20,0"
                                            HorizontalAlignment="Stretch"
                                            DataContext="{Binding ChildrenItems[2]}">
                                            <Border
                                                Margin="0,20,0,0"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="10"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                            <ContentControl
                                                Margin="0,20,0,0"
                                                Content="{Binding AnswerItems[0]}"
                                                ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                DockPanel.Dock="Bottom" />
                                            <Image
                                                Width="322"
                                                Margin="0,20,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="{StaticResource crs_题目插图2}" />
                                        </DockPanel>
                                    </UniformGrid>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport
                                    Height="55"
                                    TextBlock.FontSize="26"
                                    TextBlock.FontWeight="Bold">
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        记忆
                                    </TextBlock>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport DataContext="{Binding SubjectItems[2]}">
                                    <!--<behaviors:Interaction.Triggers>
                                            <behaviors:EventTrigger EventName="Loaded">
                                                <behaviors:ChangePropertyAction PropertyName="OriginName"
                                                                                TargetObject="{Binding}"
                                                                                Value="记忆" />
                                            </behaviors:EventTrigger>
                                        </behaviors:Interaction.Triggers>-->
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource crs_SolidColorBrush.F89F00}">
                                            不计分
                                        </TextBlock>
                                    </controls:Crs_SubjectReport.RightContent>
                                    <theme:LineGrid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="335" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="20"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            LineHeight="36"
                                            TextWrapping="Wrap">
                                            读出下列词语，然后由患者重复上述过程重复2次，5分钟后回忆
                                        </TextBlock>
                                        <theme:LineGrid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>

                                            <theme:LineGrid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    面孔
                                                </TextBlock>
                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    天鹅绒
                                                </TextBlock>
                                                <TextBlock
                                                    Grid.Column="3"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    教堂
                                                </TextBlock>
                                                <TextBlock
                                                    Grid.Column="4"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    菊花
                                                </TextBlock>
                                                <TextBlock
                                                    Grid.Column="5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    红色
                                                </TextBlock>
                                            </theme:LineGrid>

                                            <theme:LineGrid Grid.Row="1" DataContext="{Binding ChildrenItems[0]}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    第1次
                                                </TextBlock>
                                                <ContentControl
                                                    Grid.Column="1"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
                                                                PropertyName="Ignore"
                                                                TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                Value="True" />
                                                        </behaviors:EventTrigger>
                                                    </behaviors:Interaction.Triggers>
                                                </ContentControl>
                                                <ContentControl
                                                    Grid.Column="2"
                                                    Content="{Binding AnswerItems[1]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
                                                                PropertyName="Ignore"
                                                                TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                Value="True" />
                                                        </behaviors:EventTrigger>
                                                    </behaviors:Interaction.Triggers>
                                                </ContentControl>
                                                <ContentControl
                                                    Grid.Column="3"
                                                    Content="{Binding AnswerItems[2]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
                                                                PropertyName="Ignore"
                                                                TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                Value="True" />
                                                        </behaviors:EventTrigger>
                                                    </behaviors:Interaction.Triggers>
                                                </ContentControl>
                                                <ContentControl
                                                    Grid.Column="4"
                                                    Content="{Binding AnswerItems[3]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
                                                                PropertyName="Ignore"
                                                                TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                Value="True" />
                                                        </behaviors:EventTrigger>
                                                    </behaviors:Interaction.Triggers>
                                                </ContentControl>
                                                <ContentControl
                                                    Grid.Column="5"
                                                    Content="{Binding AnswerItems[4]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
                                                                PropertyName="Ignore"
                                                                TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                Value="True" />
                                                        </behaviors:EventTrigger>
                                                    </behaviors:Interaction.Triggers>
                                                </ContentControl>
                                            </theme:LineGrid>

                                            <theme:LineGrid Grid.Row="2" DataContext="{Binding ChildrenItems[1]}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1.5*" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    TextTrimming="CharacterEllipsis">
                                                    第2次
                                                </TextBlock>
                                                <ContentControl
                                                    Grid.Column="1"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
                                                                PropertyName="Ignore"
                                                                TargetObject="{Binding Content, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                                                Value="True" />
                                                        </behaviors:EventTrigger>
                                                    </behaviors:Interaction.Triggers>
                                                </ContentControl>
                                                <ContentControl
                                                    Grid.Column="2"
                                                    Content="{Binding AnswerItems[1]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}">
                                                    <behaviors:Interaction.Triggers>
                                                        <behaviors:EventTrigger EventName="Loaded">
                                                            <behaviors:ChangePropertyAction
