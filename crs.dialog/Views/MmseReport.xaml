<UserControl
    x:Class="crs.dialog.Views.MmseReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:crs.extension.Controls;assembly=crs.extension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lcc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mmses="clr-namespace:crs.extension.Controls.MMSEs;assembly=crs.extension"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:theme="clr-namespace:crs.theme;assembly=crs.theme"
    xmlns:vm="clr-namespace:crs.dialog.ViewModels"
    xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:MmseReportViewModel}}"
    d:MinHeight="1080"
    d:Width="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <DockPanel>
        <hc:SimplePanel
            Height="100"
            Background="Transparent"
            DockPanel.Dock="Top"
            MouseUp="SimplePanel_MouseUp" />
        <hc:SimplePanel
            Width="280"
            Background="Transparent"
            DockPanel.Dock="Left"
            MouseUp="SimplePanel_MouseUp" />

        <hc:SimplePanel Background="White">
            <DockPanel Margin="45,10,45,45">
                <UniformGrid
                    Columns="3"
                    DockPanel.Dock="Top"
                    Rows="1">
                    <Button
                        Width="58"
                        Height="46"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}">
                        <Button.Background>
                            <ImageBrush ImageSource="{StaticResource crs_返回}" />
                        </Button.Background>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold">
                        MMSE量表报告
                    </TextBlock>
                    <Button
                        Width="166"
                        Height="52"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        hc:BorderElement.CornerRadius="26"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        Click="ExportPDFButton_Click"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="30"
                                VerticalAlignment="Center"
                                Source="{StaticResource crs_导出报告}" />
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">导出报告</TextBlock>
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <Border
                    Margin="0,10,0,0"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource EffectShadow2}">
                    <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto">
                        <DockPanel
                            x:Name="page"
                            Margin="40,20,40,40"
                            LastChildFill="False">
                            <Border
                                Height="120"
                                BorderBrush="Black"
                                BorderThickness="0,0,0,1"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24">
                                <UniformGrid
                                    Margin="0,0,0,20"
                                    Columns="3"
                                    Rows="2">
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">姓名：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.Name, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">性别：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.SexType, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">年龄：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.Age, StringFormat={}{0}岁, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">训练用时：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding DurationTime, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">模式：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="标准评估"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">报告时间：</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding DateTime, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Rectangle
                                    Width="7"
                                    Height="27"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                    RadiusX="3"
                                    RadiusY="3" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Bold">
                                    测评得分
                                </TextBlock>
                            </StackPanel>
                            <lcc:CartesianChart
                                Height="380"
                                Margin="0,20,0,0"
                                DataContext="{Binding CartesianChartItem}"
                                DockPanel.Dock="Top"
                                LegendPosition="Top"
                                Series="{Binding Series}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}" />
                            <DockPanel
                                Margin="20,20,20,0"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24"
                                TextBlock.FontWeight="Bold">
                                <TextBlock DockPanel.Dock="Left">主要问题：</TextBlock>
                                <TextBlock Text="{Binding Problem}" TextWrapping="Wrap" />
                            </DockPanel>
                            <Border
                                Margin="0,20,0,0"
                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                DockPanel.Dock="Top">
                                <TextBlock
                                    Margin="20"
                                    FontSize="24"
                                    Text="{Binding Conclusion}"
                                    TextWrapping="Wrap" />
                            </Border>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Rectangle
                                    Width="7"
                                    Height="27"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                    RadiusX="3"
                                    RadiusY="3" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Bold">
                                    量表详情
                                </TextBlock>
                            </StackPanel>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24">
                                <controls:Crs_SubjectReport
                                    Height="55"
                                    TextBlock.FontSize="26"
                                    TextBlock.FontWeight="Bold">
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">得分</TextBlock>
                                    </controls:Crs_SubjectReport.RightContent>
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        定向力
                                    </TextBlock>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport DataContext="{Binding SubjectItems[0]}">
                                    <behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger EventName="Loaded">
                                            <behaviors:ChangePropertyAction
                                                PropertyName="OriginName"
                                                TargetObject="{Binding}"
                                                Value="定向力" />
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource crs_SolidColorBrush.F89F00}"
                                            Text="{Binding Fraction, TargetNullValue=--, FallbackValue=--}" />
                                    </controls:Crs_SubjectReport.RightContent>
                                    <theme:LineGrid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <theme:LineGrid DataContext="{Binding ChildrenItems[0]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    星期几
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="1" DataContext="{Binding ChildrenItems[1]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    几号
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="2" DataContext="{Binding ChildrenItems[2]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    几月
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="3" DataContext="{Binding ChildrenItems[3]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    什么季节
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="4" DataContext="{Binding ChildrenItems[4]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    哪一年
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                    </theme:LineGrid>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport DataContext="{Binding SubjectItems[1]}">
                                    <behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger EventName="Loaded">
                                            <behaviors:ChangePropertyAction
                                                PropertyName="OriginName"
                                                TargetObject="{Binding}"
                                                Value="定向力" />
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource crs_SolidColorBrush.F89F00}"
                                            Text="{Binding Fraction, TargetNullValue=--, FallbackValue=--}" />
                                    </controls:Crs_SubjectReport.RightContent>
                                    <theme:LineGrid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <theme:LineGrid DataContext="{Binding ChildrenItems[0]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    省市
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="1" DataContext="{Binding ChildrenItems[1]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    区或县
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="2" DataContext="{Binding ChildrenItems[2]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    街道或乡
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="3" DataContext="{Binding ChildrenItems[3]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    什么地方
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                        <theme:LineGrid Grid.Column="4" DataContext="{Binding ChildrenItems[4]}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <DockPanel>
                                                <ContentControl
                                                    Margin="20,0"
                                                    Content="{Binding AnswerItems[0]}"
                                                    ContentTemplate="{StaticResource MMSE_MoCA_AnswerTemplate_ReadOnly}"
                                                    DockPanel.Dock="Right" />
                                                <TextBlock
                                                    Margin="20,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Right"
                                                    TextTrimming="CharacterEllipsis">
                                                    第几层楼
                                                </TextBlock>
                                            </DockPanel>
                                            <Border
                                                Grid.Row="1"
                                                Margin="1"
                                                Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                                                DockPanel.Dock="Bottom">
                                                <TextBlock
                                                    Margin="20,0"
                                                    VerticalAlignment="Center"
                                                    DataContext="{Binding AnswerItems[0]}"
                                                    Text="{Binding Remark, StringFormat={}记录：{0}, TargetNullValue=记录：, FallbackValue=记录：}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Border>
                                        </theme:LineGrid>
                                    </theme:LineGrid>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport
                                    Height="55"
                                    TextBlock.FontSize="26"
                                    TextBlock.FontWeight="Bold">
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">得分</TextBlock>
                                    </controls:Crs_SubjectReport.RightContent>
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        即时记忆力
                                    </TextBlock>
                                </controls:Crs_SubjectReport>
                                <controls:Crs_SubjectReport DataContext="{Binding SubjectItems[2]}">
                                    <behaviors:Interaction.Triggers>
                                        <behaviors:EventTrigger EventName="Loaded">
                                            <behaviors:ChangePropertyAction
                                                PropertyName="OriginName"
                                                TargetObject="{Binding}"
                                                Value="即时记忆力" />
                                        </behaviors:EventTrigger>
                                    </behaviors:Interaction.Triggers>
                                    <controls:Crs_SubjectReport.RightContent>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource crs_SolidColorBrush.F89F00}"
                                            Text="{Binding Fraction, TargetNullValue=--, FallbackValue=--}" />
                                    </controls:Crs_SubjectReport.RightContent>
                                    <theme:LineGrid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="335" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="20"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
