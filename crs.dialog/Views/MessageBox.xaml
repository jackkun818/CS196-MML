<UserControl x:Class="crs.dialog.Views.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:crs.dialog.ViewModels"
             d:Background="Transparent"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                              Type={x:Type vm:MessageBoxViewModel}}"
             d:Height="1080"
             d:Width="1920"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="OkTemplate">
            <Button Width="127"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    hc:BorderElement.CornerRadius="8"
                    Background="{StaticResource crs_SolidColorBrush.F89F00}"
                    BorderThickness="0"
                    Command="{Binding OkCommand}"
                    FontSize="26"
                    Foreground="White">
                confirm
            </Button>
        </DataTemplate>
        <DataTemplate x:Key="CancelTemplate">
            <Button Width="127"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    hc:BorderElement.CornerRadius="8"
                    Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                    BorderThickness="0"
                    Command="{Binding CancelCommand}"
                    FontSize="26"
                    Foreground="{StaticResource crs_SolidColorBrush.9B9B9B}">
                Cancel
            </Button>
        </DataTemplate>
        <DataTemplate x:Key="OKOrCancelTemplate">
            <UniformGrid Width="500"
                         Columns="2"
                         Rows="1">
                <Button Width="127"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="8"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        BorderThickness="0"
                        Command="{Binding OkCommand}"
                        FontSize="26"
                        Foreground="White">
                    confirm
                </Button>
                <Button Width="127"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="8"
                        Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}"
                        FontSize="26"
                        Foreground="{StaticResource crs_SolidColorBrush.9B9B9B}">
                    Cancel
                </Button>
            </UniformGrid>
        </DataTemplate>
        <DataTemplate x:Key="CustomReportTemplate">
            <UniformGrid Width="500"
                         Columns="3"
                         Rows="1">
                <Button Width="127"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="8"
                        Background="{StaticResource crs_SolidColorBrush.EFEFEF}"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}"
                        FontSize="26"
                        Foreground="{StaticResource crs_SolidColorBrush.9B9B9B}">
                    Cancel
                </Button>

                <Button Width="127"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="8"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        BorderThickness="0"
                        Command="{Binding OkCommand}"
                        FontSize="26"
                        Foreground="White">
                    generate
                </Button>
                <Button Width="127"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        hc:BorderElement.CornerRadius="8"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        BorderThickness="0"
                        Command="{Binding NoCommand}"
                        FontSize="26"
                        Foreground="White">
                    Not generated
                </Button>
            </UniformGrid>
        </DataTemplate>
        <DataTemplate x:Key="Null">
            <hc:SimplePanel />
        </DataTemplate>
    </UserControl.Resources>

    <Border Width="614"
            MinHeight="363"
            MaxHeight="863"
            d:Height="363"
            Background="White"
            ClipToBounds="True"
            CornerRadius="10"
            Effect="{StaticResource EffectShadow1}">
        <hc:SimplePanel>
            <Image Width="634"
                   Height="383"
                   Margin="-10"
                   VerticalAlignment="Top"
                   Source="{StaticResource crs_Prompt box}"
                   Stretch="Fill">
                <Image.Clip>
                    <RectangleGeometry Rect="0 0 634 360" />
                </Image.Clip>
            </Image>
            <DockPanel>
                <ContentControl Height="50"
                                Margin="0,0,0,35"
                                Content="{Binding}"
                                DockPanel.Dock="Bottom">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="ContentTemplate" Value="{StaticResource Null}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Button}" Value="OK">
                                    <Setter Property="ContentTemplate" Value="{StaticResource OkTemplate}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Button}" Value="Cancel">
                                    <Setter Property="ContentTemplate" Value="{StaticResource CancelTemplate}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Button}" Value="OKOrCancel">
                                    <Setter Property="ContentTemplate" Value="{StaticResource OKOrCancelTemplate}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Button}" Value="CustomReport">
                                    <Setter Property="ContentTemplate" Value="{StaticResource CustomReportTemplate}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
                <hc:ScrollViewer Width="500"
                                 Margin="0,200,0,15"
                                 VerticalAlignment="Stretch"
                                 Background="Transparent"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <TextBlock VerticalAlignment="Center"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource crs_SolidColorBrush.9B9B9B}"
                               LineHeight="40"
                               Text="{Binding Message, FallbackValue=--}"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />
                </hc:ScrollViewer>
            </DockPanel>
        </hc:SimplePanel>
    </Border>
</UserControl>
