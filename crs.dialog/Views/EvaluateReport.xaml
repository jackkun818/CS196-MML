<UserControl
    x:Class="crs.dialog.Views.EvaluateReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:crs.extension.Controls;assembly=crs.extension"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lcc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:crs.dialog.ViewModels"
    xmlns:wpfToolkit="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type={x:Type vm:EvaluateReportViewModel}}"
    d:Height="1080"
    d:Width="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="LineSolidColorBrush">#90000000</SolidColorBrush>

        <Style BasedOn="{StaticResource crs_DataGridColumnHeaderStyle}" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,-2,0" />
            <Setter Property="BorderThickness" Value="0,0,1,0" />
            <Setter Property="Padding" Value="25,0" />
            <Setter Property="Background" Value="#08000000" />
            <Setter Property="BorderBrush" Value="{StaticResource LineSolidColorBrush}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style BasedOn="{StaticResource DataGridRowStyle}" TargetType="DataGridRow">
            <Setter Property="Margin" Value="0,0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="{StaticResource LineSolidColorBrush}" />
            <Style.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="true">
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
                <Trigger Property="DataGridRow.IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="DataGridRow.IsSelected" Value="true" />
                        <Condition Property="Selector.IsSelectionActive" Value="false" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="Transparent" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style BasedOn="{StaticResource DataGridCellStyle}" TargetType="DataGridCell">
            <Setter Property="Margin" Value="0,0,-6,0" />
            <Setter Property="BorderThickness" Value="0,0,1,0" />
            <Setter Property="BorderBrush" Value="{StaticResource LineSolidColorBrush}" />
            <Setter Property="Padding" Value="25,0" />
            <Setter Property="hc:BorderElement.CornerRadius" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="DataGridCell.IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Background" Value="Transparent" />
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="DataGridCell.IsSelected" Value="true" />
                        <Condition Property="Selector.IsSelectionActive" Value="false" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Background" Value="Transparent" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style BasedOn="{StaticResource {x:Type DataGrid}}" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True" />
            <Setter Property="ColumnHeaderHeight" Value="67" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="CanUserSortColumns" Value="False" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="RowHeight" Value="67" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource {x:Type DataGridColumnHeader}}" />
            <Setter Property="RowStyle" Value="{StaticResource {x:Type DataGridRow}}" />
            <Setter Property="CellStyle" Value="{StaticResource {x:Type DataGridCell}}" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Margin="0,0,0,-2" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <hc:SimplePanel
            Height="100"
            Background="Transparent"
            DockPanel.Dock="Top"
            MouseUp="SimplePanel_MouseUp" />
        <hc:SimplePanel
            Width="280"
            Background="Transparent"
            DockPanel.Dock="Left"
            MouseUp="SimplePanel_MouseUp" />

        <hc:SimplePanel Background="White">
            <DockPanel Margin="45,10,45,45">
                <UniformGrid
                    Columns="3"
                    DockPanel.Dock="Top"
                    Rows="1">
                    <Button
                        Width="58"
                        Height="46"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Command="{Binding CancelCommand}">
                        <Button.Background>
                            <ImageBrush ImageSource="{StaticResource crs_return}" />
                        </Button.Background>
                    </Button>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold">
                        Evaluation report
                    </TextBlock>
                    <Button
                        Width="166"
                        Height="52"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        hc:BorderElement.CornerRadius="26"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        Click="ExportPDFButton_Click"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="30"
                                VerticalAlignment="Center"
                                Source="{StaticResource crs_Export the report}" />
                            <TextBlock Margin="10,0,0,0" VerticalAlignment="Center">Export the report</TextBlock>
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <Border
                    Margin="0,10,0,0"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource EffectShadow2}">
                    <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto">
                        <DockPanel
                            x:Name="page"
                            Margin="40,20,40,40"
                            LastChildFill="False">
                            <Border
                                x:Name="reportMesgBorder"
                                Height="120"
                                BorderBrush="Black"
                                BorderThickness="0,0,0,1"
                                DockPanel.Dock="Top"
                                TextBlock.FontSize="24">
                                <UniformGrid
                                    Margin="0,0,0,20"
                                    Columns="3"
                                    Rows="2">
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">Name:</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.Name, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">gender:</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.SexType, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">age:</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding PatientItem.Age, StringFormat={}{0}age, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">Evaluation time:</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding DurationTime, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">model:</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding ModuleItem.Name, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                    <UniformGrid Columns="2" Rows="1">
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">Report time:</TextBlock>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Text="{Binding DateTime, TargetNullValue=--, FallbackValue=--}"
                                            TextTrimming="CharacterEllipsis" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Rectangle
                                    Width="7"
                                    Height="27"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                    RadiusX="3"
                                    RadiusY="3" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Bold">
                                    Overall performance
                                </TextBlock>
                            </StackPanel>
                            <Border
                                Margin="0,20,0,0"
                                Padding="5"
                                Background="Transparent"
                                CornerRadius="6"
                                DockPanel.Dock="Top"
                                Effect="{StaticResource EffectShadow2}">
                                <DataGrid
                                    x:Name="reportDataTable"
                                    HorizontalAlignment="Left"
                                    ItemsSource="{Binding ReportDataTable}"
                                    PreviewMouseWheel="DataGrid_PreviewMouseWheel" />
                            </Border>

                            <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding CartesianChartItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,20,0,0">
                                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                                <Rectangle
                                                    Width="7"
                                                    Height="27"
                                                    VerticalAlignment="Center"
                                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                                    RadiusX="3"
                                                    RadiusY="3" />
                                                <TextBlock
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="30"
                                                    FontWeight="Bold"
                                                    Text="{Binding Key, StringFormat={}“{0}”statistics}" />
                                            </StackPanel>

                                            <lcc:CartesianChart
                                                Height="380"
                                                Margin="0,20,0,0"
                                                DataContext="{Binding Value}"
                                                DockPanel.Dock="Top"
                                                LegendPosition="Top"
                                                Series="{Binding Series}"
                                                XAxes="{Binding XAxes}"
                                                YAxes="{Binding YAxes}"
                                                ZoomMode="PanX" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <StackPanel
                                Margin="0,20,0,0"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                                <Rectangle
                                    Width="7"
                                    Height="27"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource crs_SolidColorBrush.F89F00}"
                                    RadiusX="3"
                                    RadiusY="3" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Bold">
                                    Standard details
                                </TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <controls:Crs_ZValueChart
                                    Width="1470"
                                    HorizontalAlignment="Left"
                                    ZValueChartItems="{Binding ZValueChartItems}" />
                                <TextBlock
                                    Width="1470"
                                    Height="200"
                                    HorizontalAlignment="Left"
                                    Background="#f2f2f2"
                                    FontSize="28"
                                    Text="{Binding Conclusion}" />
                            </StackPanel>


                        </DockPanel>

                    </ScrollViewer>
                </Border>
            </DockPanel>
        </hc:SimplePanel>
    </DockPanel>
</UserControl>
