<UserControl x:Class="crs.dialog.Views.DigitalHumanSelected"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:crs.dialog.ViewModels"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                              Type={x:Type vm:DigitalHumanSelectedViewModel}}"
             d:Height="1080"
             d:Width="1920"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

    <Border Width="1005"
            Height="620"
            Background="White"
            CornerRadius="18">
        <hc:SimplePanel>
            <DockPanel>
                <Button Width="180"
                        Height="56"
                        Margin="0,45,0,50"
                        Background="{StaticResource crs_SolidColorBrush.F89F00}"
                        Command="{Binding ConfirmCommand}"
                        DockPanel.Dock="Bottom"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White">
                    Sure
                </Button>
                <TextBlock Margin="0,20,0,35"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Top"
                           FontSize="28"
                           FontWeight="Bold">
                    Choose a digital person
                </TextBlock>
                <ListBox Margin="60,0"
                         HorizontalContentAlignment="Stretch"
                         BorderThickness="0"
                         DockPanel.Dock="Top"
                         ItemContainerStyle="{StaticResource ListBoxItemCustom}"
                         ItemsSource="{Binding DigitalHumanItems}"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         SelectedItem="{Binding DigitalHumanSelectedItem}">
                    <hc:Interaction.Triggers>
                        <hc:EventTrigger EventName="SelectionChanged">
                            <hc:InvokeCommandAction Command="{Binding DigitalHumanSelectedChangedCommand}" />
                        </hc:EventTrigger>
                    </hc:Interaction.Triggers>
                    <ListBox.Style>
                        <Style BasedOn="{StaticResource {x:Type ListBox}}" TargetType="ListBox" />
                    </ListBox.Style>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="border"
                                    Width="262"
                                    Height="358"
                                    Margin="15,6"
                                    Background="White"
                                    CornerRadius="6"
                                    Effect="{StaticResource EffectShadow2}">
                                <DockPanel>
                                    <TextBlock x:Name="textBlock"
                                               Margin="20,30,20,0"
                                               HorizontalAlignment="Center"
                                               DockPanel.Dock="Top"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Text="{Binding Name, TargetNullValue=--, FallbackValue=--}"
                                               TextTrimming="CharacterEllipsis" />
                                    <hc:Gravatar Width="196"
                                                 Height="224"
                                                 hc:BorderElement.CornerRadius="6">
                                        <Image Source="{Binding Image, Converter={StaticResource crs_DigitalHumanBitmap2ImageSource_196_Converter}}" Stretch="Fill" />
                                    </hc:Gravatar>
                                </DockPanel>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource crs_SolidColorBrush.F89F00}" />
                                    <Setter TargetName="textBlock" Property="Foreground" Value="White" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
            <Button Width="30"
                    Height="30"
                    Margin="0,25,45,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Black"
                    Command="{Binding CancelCommand}">
                <Button.OpacityMask>
                    <ImageBrush ImageSource="{StaticResource crs_closure}" />
                </Button.OpacityMask>
            </Button>
        </hc:SimplePanel>
    </Border>
</UserControl>
